<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="document_tree_inherit">
        <field name="model">documents.document</field>
        <field name="inherit_id" ref="documents.documents_view_list" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='activity_exception_decoration']" position="before">
                    <button name="open_in_onlyoffice" string="Open In Only Office" type="object" class="oe_highlight"/>
                    <button name="get_file_versions" string="Get file info" type="object" class="oe_highlight"/>
                </xpath>
            </data>

        </field>
    </record>

    <record model="ir.ui.view" id="document_folder_form_inherit">
        <field name="model">documents.folder</field>
        <field name="inherit_id" ref="documents.folder_view_form" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='parent_folder_id']" position="after">
                    <field name="partner_id" options="{'no_create': True}" />
                </xpath>
                  <xpath expr="//field[@name='partner_id']" position="after">
                      <button name="get_folder_information" string="Get folder information" type="object" icon="fa-cogs"/>
                </xpath>
            </data>

        </field>
    </record>

</odoo>
