<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- automation action -->
    	<record id="create_new_bl_automation_action" model="base.automation">
            <field name="name">Create new BL</field>
            <field name="model_id" ref="spc_rapprochement_aziza.model_zinvoice_line"/>
            <field name="trigger">on_create</field>
            <field name="state">code</field>
            <field name="code">
            for rec in records:
                rec.create_new_bl_action()
            </field>
        </record>

        <!--  Cron      -->

        <record  id="planned_brv_integration_cron" model="ir.cron">
            <field name="name">Planned Integration BRV</field>
            <field name="model_id" ref="model_inter_brv"/>
            <field name="state">code</field>
            <field name="code">model.create_new_brv_action()</field>
            <field eval="True" name="is_oscar"/>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">False</field>
        </record>

    </data>
</odoo>