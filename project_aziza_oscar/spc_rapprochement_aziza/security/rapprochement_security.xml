<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="group_creation_bl" model="res.groups">
            <field name="name">Création de BL</field>
        </record>


        <!-- ##################################### RULES ###################################### -->

        <!-- Exploitation -->

        <record id="bl_rule_magasin" model="ir.rule">
            <field name="name">BL de Magasin</field>
            <field name="model_id" ref="model_oscar_bl"/>
            <field name="domain_force">[('client_id.user_ids', 'child_of', [user.id])]</field>
            <field name="groups" eval="[(4,ref('spc_oscar_aziza.group_reponsable_magasin')),
                                        (4,ref('spc_oscar_aziza.group_reponsable_zone')),
                                        (4,ref('spc_oscar_aziza.group_DRE'))]"/>
        </record>

        <record id="brv_rule_magasin" model="ir.rule">
            <field name="name">BRV de Magasin</field>
            <field name="model_id" ref="model_oscar_brv"/>
            <field name="domain_force">[('site_id.user_ids', 'child_of', [user.id])]</field>
            <field name="groups" eval="[(4,ref('spc_oscar_aziza.group_reponsable_magasin')),
                                        (4,ref('spc_oscar_aziza.group_reponsable_zone')),
                                        (4,ref('spc_oscar_aziza.group_DRE'))]"/>
        </record>

        <record id="bon_reception_rule_magasin" model="ir.rule">
            <field name="name">Bon de Réception de Magasin</field>
            <field name="model_id" ref="model_oscar_bon_reception"/>
            <field name="domain_force">[('site_id.user_ids', 'child_of', [user.id])]</field>
            <field name="groups" eval="[(4,ref('spc_oscar_aziza.group_reponsable_magasin')),
                                        (4,ref('spc_oscar_aziza.group_reponsable_zone')),
                                        (4,ref('spc_oscar_aziza.group_DRE'))]"/>
        </record>

        <!-- Manager -->

        <record id="bl_rule_manager" model="ir.rule">
            <field name="name">BL : Manager</field>
            <field name="model_id" ref="model_oscar_bl"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups"
                   eval="[(4,ref('spc_oscar_aziza.group_admin_oscar')),(4,ref('spc_oscar_aziza.group_DE'))]"/>
        </record>

        <record id="brv_rule_manager" model="ir.rule">
            <field name="name">BRV : Manager</field>
            <field name="model_id" ref="model_oscar_brv"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups"
                   eval="[(4,ref('spc_oscar_aziza.group_admin_oscar')),(4,ref('spc_oscar_aziza.group_DE'))]"/>
        </record>

        <record id="bon_reception_rule_manager" model="ir.rule">
            <field name="name">Bon de Réception : Manager</field>
            <field name="model_id" ref="model_oscar_bon_reception"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups"
                   eval="[(4,ref('spc_oscar_aziza.group_admin_oscar')),(4,ref('spc_oscar_aziza.group_DE'))]"/>
        </record>


    </data>
</odoo>