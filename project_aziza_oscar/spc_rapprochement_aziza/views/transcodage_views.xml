<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <menuitem id="menu_transcodage_view"
              name="Tables Transcodage"
              parent="spc_oscar_aziza.menu_oscar_administration"
              sequence="995"/>

    <!-- view filter site-->
    <record id="view_transcodage_site_filter" model="ir.ui.view">
        <field name="name">transcodage.site.search.view</field>
        <field name="model">transcodage.site</field>
        <field name="arch" type="xml">
            <search string="Rechercher des sites">
                <field name="code_interne"/>
                <field name="code_externe"/>
            </search>
        </field>
    </record>

    <!-- Site form view  -->
    <record model="ir.ui.view" id="transcodage_site_view_form">
        <field name="name">transcodage.site.view.form</field>
        <field name="model">transcodage.site</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code_interne"/>
                            <field name="code_externe"/>
                            <field name="code_fournisseur"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Site tree view  -->
    <record model="ir.ui.view" id="transcodage_site_view_tree">
        <field name="name">transcodage.site.view.tree</field>
        <field name="model">transcodage.site</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code_interne"/>
                <field name="code_externe"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- actions liste de sites (Transcodage) -->
    <record model="ir.actions.act_window" id="action_transcodage_site">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Transcodage sites</field>
        <field name="res_model">transcodage.site</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_neutral_face">
                Aucun enregistrement trouvé.
            </p>
        </field>
    </record>

