<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- BRV search view -->
    <record id="oscar_brv_view_search" model="ir.ui.view">
        <field name="name">oscar.brv.search.view</field>
        <field name="model">oscar.brv</field>
        <field name="arch" type="xml">
            <search string="BRV">
                <field name="name"/>
            </search>
        </field>
    </record>

    <!-- BRV form view -->
    <record model="ir.ui.view" id="oscar_brv_view_form">
        <field name="name">oscar.brv.view.form</field>
        <field name="model">oscar.brv</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!--                    <button name="action_validate" string="Valider" states="draft"-->
                    <!--                        type="object" class="btn-primary oe_read_only" />-->
                    <field name="state" widget="statusbar" statusbar_visible="new,validated"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-check-square-o">
                            <field name="active" widget="boolean_button"
                                   options="{&quot;terminology&quot;: &quot;Désactiver&quot;}"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="num_cmd"/>
                            <field name="supplier_id"/>
                            <field name="site_id"/>
                        </group>
                        <group>
                            <field name="date_brv"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page string="Détails">
                            <field name="brv_line_ids">
                                <tree editable="true">
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="qte_recue" sum="Total"/>
                                    <field name="unite_recue"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- BRV tree view -->
    <record model="ir.ui.view" id="oscar_brv_view_tree">
        <field name="name">oscar.brv.view.tree</field>
        <field name="model">oscar.brv</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_brv"/>
                <field name="state" widget="colored_state"
                       options="{'new': { 'class': 'badge-info', 'name': 'Nouveau' },
                       'validated': { 'class': 'badge-success', 'name': 'Validé' }}"/>
            </tree>
        </field>
    </record>

    <!-- actions liste de nouveaux BRV -->
    <record model="ir.actions.act_window"
            id="action_oscar_brv_new">
        <field name="type">ir.actions.act_window</field>
        <field name="name">BRV</field>
        <field name="res_model">oscar.brv</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau BRV.
            </p>
            <p>
                Oscar vous aide à gérer facilement vos BRV.
            </p>
        </field>
    </record>

    <!-- actions liste de BRV validés -->
    <record model="ir.actions.act_window"
            id="action_oscar_brv_validated">
        <field name="type">ir.actions.act_window</field>
        <field name="name">BRV validés</field>
        <field name="res_model">oscar.brv</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_neutral_face">
                Aucun BRV trouvé.
            </p>
        </field>
    </record>

    <!-- menu BRV -->
    <menuitem id="menu_oscar_brv" name="Bon de réception valorisé"
              parent="menu_oscar_rapprochement" sequence="100"/>

    <menuitem id="menu_oscar_brv_new" name="Nouveaux BRV"
              action="action_oscar_brv_new"
              parent="menu_oscar_brv" sequence="10"/>

    <menuitem id="menu_oscar_brv_validated" name="BRV validés"
              action="action_oscar_brv_validated"
              parent="menu_oscar_brv" sequence="20"/>

</odoo>