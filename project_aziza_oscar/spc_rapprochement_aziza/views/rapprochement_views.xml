<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Top menu item -->
    <menuitem id="menu_oscar_rapprochement"
              name="Rapprochement"
              sequence="20"
              web_icon="spc_rapprochement_aziza,static/description/icon.png"/>

    <menuitem id="menu_oscar_bon_reception"
              name="Bon de réception"
              sequence="10"
              parent="menu_oscar_rapprochement"/>

    <!-- Bon de réception search view -->
    <record id="oscar_bon_reception_view_search" model="ir.ui.view">
        <field name="name">oscar.bon.reception.search.view</field>
        <field name="model">oscar.bon.reception</field>
        <field name="arch" type="xml">
            <search string="Bon de réception">
                <field name="name"/>
            </search>
        </field>
    </record>

    <!-- Bon de réception form view -->
    <record model="ir.ui.view" id="oscar_bon_reception_view_form">
        <field name="name">oscar.bon.reception.view.form</field>
        <field name="model">oscar.bon.reception</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_validate" string="Valider" states="new"
                            type="object" class="btn-primary oe_read_only"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,validated"/>
                </header>
                <div class="oe_button_box" name="button_box">
                    <button name="toggle_active" type="object"
                            class="oe_stat_button" icon="fa-check-square-o">
                        <field name="active" widget="boolean_button"
                               options="{&quot;terminology&quot;: &quot;Désactiver&quot;}"/>
                    </button>
                </div>
                <div class="oe_title">
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                </div>
                <group>
                    <group>
                        <field name="site_id"/>
                        <field name="user_id"/>
                    </group>
                    <group>
                        <field name="date_creation"/>
                        <field name="supplier_id" required="1"/>
                    </group>
                </group>
                <group>
                    <group string="BRV">
                        <field name="brv_id" invisible="1"/>
                        <field name="num_brv"/>
                    </group>
                    <group string="BL">
                        <field name="bl_id" invisible="1"/>
                        <field name="num_bl"/>
                    </group>
                </group>
                <button name="action_rapprochement" string="Rapprochement" states="new" type="object" icon="fa-refresh"
                        class="btn-primary oe_right"/>
                <notebook colspan="4">
                    <page string="Rapprochement">
                        <field name="rapprochement_ids" nolabel="1">
                            <tree editable="true" decoration-danger="ecart&lt;0.0" decoration-success="ecart==0.0"
                                  decoration-warning="ecart&gt;0.0">
                                <field name="product_id"/>
                                <field name="name"/>
                                <field name="supplier_id"/>
                                <field name="qte_recue" sum="Qté reçue"/>
                                <field name="qte_livree" sum="Qté livrée"/>
                                <field name="ecart" sum="Écart"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <!-- Bon reception tree view -->
    <record model="ir.ui.view" id="oscar_bon_reception_view_tree">
        <field name="name">oscar.bon.reception.view.tree</field>
        <field name="model">oscar.bon.reception</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_creation"/>
                <field name="supplier_id"/>
                <field name="num_brv"/>
                <field name="num_bl"/>
                <field name="state" widget="colored_state"
                       options="{'new': { 'class': 'badge-info', 'name': 'Nouveau' },
                       'validated': { 'class': 'badge-success', 'name': 'Validé' }}"/>
            </tree>
        </field>
    </record>

    <!-- actions liste de nouveaux Bon de reception -->
    <record model="ir.actions.act_window"
            id="action_oscar_bon_reception_new">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Bons de réception</field>
        <field name="res_model">oscar.bon.reception</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau Bon de réception.
            </p>
            <p>
                Oscar vous aide à gérer facilement vos Bons de réception.
            </p>
        </field>
    </record>

    <!-- actions liste de bon de reception validés -->
    <record model="ir.actions.act_window"
            id="action_oscar_bon_reception_validated">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Bons de réception validés</field>
        <field name="res_model">oscar.bon.reception</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_neutral_face">
                Aucun Bon de réception trouvé.
            </p>
        </field>
    </record>

    <menuitem id="menu_oscar_bon_reception_new" name="Nouveaux Bons de réception"
              action="action_oscar_bon_reception_new"
              parent="menu_oscar_bon_reception" sequence="10"/>

    <menuitem id="menu_oscar_bon_reception_validated" name="Bons de réception validés"
              action="action_oscar_bon_reception_validated"
              parent="menu_oscar_bon_reception" sequence="20"/>


</odoo>