            <xpath expr="//header" position="replace">
                <style>
                    .header-bg{
                        background: #FFDD3A;
                    }
                </style>
                <header class="header-bg">
<!--                    <img t-att-src="./logo.jpeg" />-->
<!--                    <p>44</p> <p>44</p> v <p>44</p> <p>44</p>-->
