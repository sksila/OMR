<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <!-- view filter Avoir client-->
        <record id="view_oscar_avoir_client_filter" model="ir.ui.view">
            <field name="name">oscar.avoir.client.search.view</field>
            <field name="model">oscar.avoir.client</field>
            <field name="arch" type="xml">
                <search string="Rechercher des avoirs">
                    <field name="name" />
                    <field name="phone" />
                    <field name="magasin_id" groups="spc_oscar_aziza.group_reponsable_zone,spc_oscar_aziza.group_DRE,spc_oscar_aziza.group_DE" />
                    <separator/>
                    <filter string="Nouveaux avoirs" name="new_avoir" domain="[('state', '=', 'new')]"/>
                    <filter string="Avoirs validés" name="validated_avoir" domain="[('state', '=', 'validate')]"/>
                    <separator/>
                    <filter string="Tous" name="all_avoir" domain="['|',('active', '=', True),('active', '=', False)]"/>
                    <separator/>
                    <filter name="group_avoir_by_state" string="Statut" context="{'group_by':'state'}" />
                    <filter name="group_avoir_by_magasin" string="Magasin" context="{'group_by':'magasin_id'}" groups="spc_oscar_aziza.group_reponsable_zone,spc_oscar_aziza.group_DRE,spc_oscar_aziza.group_DE"/>
                    <filter name="group_avoir_by_date" string="Date Avoir" context="{'group_by':'date:day'}" />
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="spc_avoir_client_form_view">
            <field name="name">oscar.avoir.client.form</field>
            <field name="model">oscar.avoir.client</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="to_validate" string="Valider" states="new" type="object" class="btn-primary oe_read_only" groups="spc_oscar_aziza.group_reponsable_zone"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,validate"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" groups="spc_oscar_aziza.group_admin_oscar"
                                class="oe_stat_button" icon="fa-check-square-o">
                                <field name="active" widget="boolean_button"
                                    options="{&quot;terminology&quot;: &quot;Désactiver&quot;}" />
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="magasin_id"/>
                                <field name="user_id"/>
                                <field name="number_avoir" groups="spc_oscar_aziza.group_reponsable_zone"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="customer_id"/>
                                <field name="phone"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="comment" string="Notes internes">
                                <field name="comment"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                       <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                       <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="spc_avoir_client_list_view">
            <field name="name">oscar.avoir.client.list</field>
            <field name="model">oscar.avoir.client</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="magasin_id"/>
                    <field name="user_id"/>
                    <field name="date"/>
                    <field name="customer_id"/>
                    <field name="phone"/>
                    <field name="state" widget="colored_state" options="{'new': { 'class': 'badge-info', 'name': 'Nouveau' },
          													'validate': { 'class': 'badge-success', 'name': 'Validé' }}"/>
                </tree>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="spc_avoir_client_new_act_window">
            <field name="name">Nouveaux Avoirs</field>
            <field name="res_model">oscar.avoir.client</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{
            'search_default_new_avoir': 1,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer un nouveau avoir client.
                </p>
                <p>
                    Oscar vous aide à gérer facilement vos Avoirs Client.
                </p>
            </field>
        </record>

        <record model="ir.actions.act_window" id="spc_avoir_client_validated_act_window">
            <field name="name">Avoirs validés</field>
            <field name="res_model">oscar.avoir.client</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','validate')]</field>
            <field name="context">{
            'create': False,
            'delete': False,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_neutral_face">
                    Aucun avoir trouvé.
                </p>
                <p>
                    Oscar vous aide à gérer facilement vos Avoirs Client.
                </p>
            </field>
        </record>

        <!-- Top menu item -->
        <menuitem name="Avoir Client" id="spc_avoir_client_menu_root"
                  web_icon="spc_avoir_client,static/description/icon.png" sequence="85"/>

        <!-- Sub menu -->
        <menuitem name="Avoirs client" id="spc_avoir_client_sub_menu" parent="spc_avoir_client_menu_root" sequence="100" />

        <!-- actions Sub menu -->
        <menuitem name="Nouveaux avoirs" id="spc_new_avoir_client_menu" parent="spc_avoir_client_sub_menu"
                  action="spc_avoir_client.spc_avoir_client_new_act_window" sequence="100"/>

        <menuitem name="Avoirs validés" id="spc_validated_avoir_client_menu" parent="spc_avoir_client_sub_menu"
                  action="spc_avoir_client.spc_avoir_client_validated_act_window" sequence="200" />
    </data>
</odoo>