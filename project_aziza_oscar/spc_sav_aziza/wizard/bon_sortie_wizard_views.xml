<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- Imprimer bon de sortie wizard -->
	<record id="sav_bon_sortie_wizard_form" model="ir.ui.view">
		<field name="name">sav.bon.sortie.wizard.form</field>
		<field name="model">oscar.sav.bon.sortie.wizard</field>
		<field name="arch" type="xml">
			<form string="Imprimer Bon de Sortie">
				<header>
					<field name="state" widget="statusbar" statusbar_visible="new,print" />
				</header>
				<div class="oe_title">
					<label for="name" class="oe_edit_only" string="NÂ° Bon Sortie" />
					<h1>
						<field name="name" />
					</h1>
				</div>
				<group>
					<group>
						<field name="date_sortie" />
						<field name="supplier_id" />
					</group>
					<group>
						<field name="chauffeur_id" />
						<field name="fleet_id" />
					</group>
				</group>
				<notebook colspan="4">
					<page string="Articles">
						<field name="bon_line_ids">
							<tree editable="false" create="false">
								<field name="product_id" />
								<field name="categ_id" />
								<!--  <field name="mark_id" />
								<field name="modele_id" />-->
								<field name="barcode" />
								<field name="supplier_id" />
							</tree>
						</field>
					</page>
				</notebook>
				<footer>
					<button string="Imprimer &amp; Envoyer" name="print_BonSortie_button"
						type="object" class="btn-primary" />
					<button string="Cancel" class="btn-default" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

	<!-- Detail Bon de sortie Form -->
	<record id="sav_bon_sortie_line_wizard_form" model="ir.ui.view">
		<field name="name">sav.bon.sortie.line.wizard.form</field>
		<field name="model">oscar.sav.bon.line.wizard</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="product_id" />
						<field name="categ_id" />
						<!--  <field name="mark_id" />
						<field name="modele_id" />-->
						<field name="barcode" />
					</group>
					<group>
						<field name="supplier_id" />
					</group>
				</group>
			</form>
		</field>
	</record>

	<record id="sav_bon_sortie_wizard_action" model="ir.actions.act_window">
		<field name="name">Imprimer &amp; Envoyer Bon de Sortie</field>
		<field name="res_model">oscar.sav.bon.sortie.wizard</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="sav_bon_sortie_wizard_form" />
		<field name="target">new</field>
	</record>

	<act_window id="action_print_bon_sortie" name="Imprimer &amp; Envoyer Bon de Sortie"
		multi="True" key2="client_action_multi" res_model="oscar.sav.bon.sortie.wizard"
		src_model="oscar.sav.claim" view_mode="form" target="new" view_type="form"
		groups="spc_sav_aziza.group_responsable_sav" />

</odoo>
