<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="problem_form_view">
        <field name="name">oscar.sav.problem.form</field>
        <field name="model">oscar.sav.problem</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="categ_ids" options="{'no_create': True, 'no_create_edit':True}" widget="many2many_tags"/>
                        <field name="categ_sav" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="problem_tree_view">
        <field name="name">oscar.sav.problem.tree</field>
        <field name="model">oscar.sav.problem</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="categ_ids" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_all_problems">
            <field name="name">Problèmes</field>
            <field name="res_model">oscar.sav.problem</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Problèmes" id="menu_sav_probleme" parent="menu_sav_configuration"
        action="action_all_problems" sequence="61" />

</odoo>