<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<template id="report_bon_sortie_document">
		<t t-call="web.html_container">
			<t t-call="web.external_layout">
			  <t t-foreach="docs" t-as="o">
				<div class="page">
					<h2 style="text-align:center;">
						<span>Bon de Sortie N°</span>
						<span t-field="o.name" />
					</h2>
					<br></br>
					<br></br>
					<br></br>
					<div class="row">
						<div class="col-xs-12">
							<div class="col-xs-6">
								<div class="row">
									<div class="col-xs-12" t-if="o.date_sortie">
										<strong>Date d'envoi : </strong>
										<span t-field="o.date_sortie" />
									</div>
									<div class="col-xs-12" t-if="o.supplier_id">
										<strong>Fournisseur : </strong>
										<span t-field="o.supplier_id.name" />
									</div>
									<div class="col-xs-12">
										<strong>Site Expédition : </strong>
										<span>Siège AZIZA</span>
									</div>
								</div>
							</div>
							<div class="col-xs-6" t-if="o.chauffeur_id">
								<div class="col-xs-12" t-if="o.chauffeur_id">
									<div class="col-xs-6">
										<strong>Chauffeur :</strong>
									</div>
									<div class="col-xs-6">
										<span t-field="o.chauffeur_id.name" />
									</div>
								</div>
								<div class="col-xs-12" t-if="o.fleet_id">
									<div class="col-xs-6">
										<strong>Véhicule :</strong>
									</div>
									<div class="col-xs-6">
										<span t-field="o.fleet_id.name" />
									</div>
								</div>
							</div>
						</div>
					</div>
					<br></br>
					<br></br>
					<br></br>
					<br></br>
					<table class="table table-condensed">
						<thead
							style="border:solid rgba(215, 242, 254, 0.72);background-color:rgba(215, 242, 254, 0.72);border-radius:10px 0px 10px 0px;">
							<tr>
								<th>Article</th>
								<th>Code Barre</th>
								<th>Catégorie</th>
								<th>Marque</th>
								<th>Modèle</th>
								<th>Fournisseur</th>
							</tr>
						</thead>
						<tbody>
							<tr t-foreach="o.bon_line_ids" t-as="b">
								<td>
									<span t-field="b.product_id.name" />
								</td>
								<td>
									<span t-field="b.barcode" />
								</td>
								<td>
									<span t-field="b.categ_id.name" />
								</td>
								<td>
<!--									<span t-field="b.mark_id.name" />-->
								</td>
								<td>
<!--									<span t-field="b.modele_id.name" />-->
								</td>
								<td>
									<span t-field="b.supplier_id.name" />
								</td>
							</tr>
						</tbody>
					</table>

					<br></br>
					<br></br>
					<br></br>
					<br></br>
					<br></br>
					<br></br>
					
					<div class="row">
						<div class="col-xs-12" style="postion:absolut;bottom:0;">
							<div class="col-xs-4 pull-left">
								<strong>
									<span>Expédition</span>
								</strong>
								<p>Signature</p>
							</div>
							<div class="col-xs-4 pull-right">
								<strong>
									<span>Chauffeur</span>
								</strong>
								<p>Signature</p>
							</div>
						</div>
					</div>
				</div>
			</t>
			</t>
			</t>
		</template>

	

	</data>
</odoo>
