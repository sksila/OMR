<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="report_claim_document">
			<t t-call="web.html_container">
				<t t-call="web.external_layout">
					<t t-foreach="docs" t-as="o">
						<div class="page">
							<br></br>
							<br></br>
							<h2 style="text-align:center;">
								<span>Réclamation N°</span>
								<span t-field="o.name" />
							</h2>
							<br></br>
							<div style="text-align:center;" t-if="o.is_back">
								<strong>Avoir</strong>
							</div>
							<br></br>
							<div style="text-align:center;"
								t-if="o.is_back and o.is_receive">
								<strong>Réceptionné par client</strong>
							</div>
							<div style="text-align:center;" t-if="o.is_exchanged">
								<strong>Echange</strong>
							</div>
							<br></br>
							<br></br>
							<br></br>

							<div class="row">
								<div class="col-6">
									<div class="col-md-12" t-if="o.number_avoir">
										<strong>Numéro Avoir: </strong>
										<span t-field="o.number_avoir" />
									</div>
									<div class="col-md-12" t-if="o.number_gold">
										<strong>Numéro de transfert Gold : </strong>
										<span t-field="o.number_gold" />
									</div>
									<div class="col-md-12" t-if="o.customer_id">
										<strong>Client : </strong>
										<span t-field="o.customer_id.name" />
									</div>
									<div class="col-md-12" t-if="o.customer_id.phone">
										<strong>Tél : </strong>
										<span t-field="o.customer_id.phone" />
									</div>
									<div class="col-md-12" t-if="o.customer_id.street">
										<strong>Adresse : </strong>
										<span t-field="o.customer_id.street" />
									</div>
									<div class="col-md-12" t-if="o.product_id">
										<strong>Article : </strong>
										<span t-field="o.product_id.name" />
									</div>
									<div class="col-md-12" t-if="o.product_id.barcode">
										<strong>Code Barre : </strong>
										<span t-field="o.product_id.barcode" />
									</div>
									<div class="col-md-12" t-if="o.code">
										<strong>N° de série : </strong>
										<span t-field="o.code" />
									</div>
								</div>

								<div class="col-6">
									<div class="col-md-12" t-if="o.date_claim">
										<strong>Date de réclamation :</strong>
										<span t-field="o.date_claim" />
									</div>
									<div class="col-md-12" t-if="o.magasin_id">
										<strong>Magasin :</strong>
										<span t-field="o.magasin_id.name" />
									</div>
									<div class="col-md-12" t-if="o.user_id">
										<strong>Réceptionné par :</strong>
										<span t-field="o.user_id.name" />
									</div>
									<br></br>
									<br></br>
									<div class="col-md-12" t-if="o.date_purchase">
										<strong>Date d'achat :</strong>
										<span t-field="o.date_purchase" />
									</div>

									<div class="col-md-12" t-if="o.date_end_guarantee">
										<strong>Date fin de garantie :</strong>
										<span t-field="o.date_end_guarantee" />
									</div>

									<div class="col-md-12" t-if="o.has_receipt">
										<strong>Ticket / Facture :</strong>
										<span>&#9745;</span>
									</div>

									<div class="col-md-12" t-if="o.has_guarantee">
										<strong>Certificat de garantie :</strong>
										<span>&#9745;</span>
									</div>
									<div class="col-md-12" t-if="o.has_accessories">
										<strong>Présence accessoires :</strong>
										<span>&#9745;</span>
									</div>
									<div class="col-md-12" t-if="o.problem_id">
										<strong>Problème :</strong>
										<span t-field="o.problem_id.name" />
									</div>
									<div class="col-md-12" t-if="o.other">
										<strong>Panne :</strong>
										<span t-field="o.panne" />
									</div>
								</div>
							</div>

							<br></br>
							<br></br>
							<br></br>
							<br></br>
							<br></br>
							<br></br>
							<br></br>
							<div class="pull-left">
								<div class="col-md-6">
									<p>Signature</p>
									<strong>
										<span>Magasin</span>
									</strong>
								</div>
							</div>
							<div class="pull-right">
								<div class="col-md-12" t-if="o.type == 'reclamation_client'">
									<p>Signature</p>
									<strong>
										<span>Client</span>
									</strong>
								</div>
								<div class="col-md-12"
									t-if="o.type == 'reclamation_interne'">
									<p>Signature</p>
									<strong>
										<span>SAV</span>
									</strong>
								</div>
							</div>



						</div>
					</t>
				</t>
			</t>
		</template>

	</data>
</odoo>

