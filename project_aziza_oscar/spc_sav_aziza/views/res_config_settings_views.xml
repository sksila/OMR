<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.account</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="claim_config" string="SAV" data-key="spc_sav_aziza">
                            <h2>Sav Configuration</h2>
                                <div class="row mt16 o_settings_container">
                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_left_pane"/>
                                    <div class="o_setting_right_pane">
                                        <span class="o_form_label">Paramètres d'envoi SMS</span>
                                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                        <!--<div class="text-muted">
                                            Les paramètres
                                        </div>-->
                                        <div class="content-group">
                                            <div class="row mt16">
                                                <label for="endpoint" string="Endpoint" class="col-lg-3 o_light_label"/>
                                                <field name="endpoint"/>
                                            </div>
                                            <div class="row mt16">
                                                <label for="label" string="Label" class="col-lg-3 o_light_label"/>
                                                <field name="label"/>
                                            </div>
                                            <div class="row mt16">
                                                <label for="login" string="Login" class="col-lg-3 o_light_label"/>
                                                <field name="login"/>
                                            </div>
                                            <div class="row mt16">
                                                <label for="account" string="Account" class="col-lg-3 o_light_label"/>
                                                <field name="account"/>
                                            </div>
                                            <div class="row mt16">
                                                <label for="password" string="Password" class="col-lg-3 o_light_label"/>
                                                <field name="password" password="True"/>
                                            </div>
                                            <div class="row mt16">
                                                <label for="http_login" string="http_login" class="col-lg-3 o_light_label"/>
                                                <field name="http_login"/>
                                            </div>
                                             <div class="row mt16">
                                                <label for="http_password" string="Http_password" class="col-lg-3 o_light_label"/>
                                                <field name="http_password" password="True"/>
                                            </div>
                                             <div class="row mt16">
                                                <label for="application" string="Application" class="col-lg-3 o_light_label"/>
                                                <field name="application"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
                </xpath>
            </field>
    </record>

     <record id="action_res_config_sms" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'spc_sav_aziza'}</field>
        </record>


    <menuitem id="menu_res_config_sms" name="SMS Config" parent="menu_sav_configuration"
        action="action_res_config_sms" groups="spc_oscar_aziza.group_admin_oscar" sequence="63" />

</odoo>