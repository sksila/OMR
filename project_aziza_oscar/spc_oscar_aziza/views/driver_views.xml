<?xml version="1.0"?>
<odoo>
	<record id="view_driver_filter_spc" model="ir.ui.view">
		<field name="name">res.partner.select.inherit</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="base.view_res_partner_filter" />
		<field name="arch" type="xml">
			<xpath expr="//search/filter[@name='type_company']"
				position="after">
				<filter string="Chauffeur" name="driver"
					domain="[('driver','=',True)]" />
			</xpath>
		</field>
	</record>
	
	<record id="action_partner_driver_form"
		model="ir.actions.act_window">
		<field name="name">Chauffeurs</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">res.partner</field>
		<field name="view_type">form</field>
		<field name="domain">[]</field>
		<field name="view_mode">tree,form</field>
		<field name="context">{
		'search_default_driver': 1,
		'default_customer':0,
		'default_supplier': 0,
		'default_driver': 1, 
		'default_is_company': True}
		</field>
		<field name="filter" eval="True" />
	</record>

	<menuitem id="menu_driver" name="Chauffeurs"
		parent="spc_oscar_aziza.menu_oscar_configuration"
		action="action_partner_driver_form" sequence="25" />

</odoo>