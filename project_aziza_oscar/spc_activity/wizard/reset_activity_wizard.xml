<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="view_reset_activity_wizard" model="ir.ui.view">
		<field name="name">reset.activity.wizard.form</field>
		<field name="model">reset.activity.wizard</field>
		<field name="arch" type="xml">
			<form>
				<field name="activity_id" invisible="1"/>
				<group>
					<group>
						<field name="motif_id" attrs="{'invisible': [('other', '!=', False)],'required': [('other', '=', False)]}"/>
						<field name="other"/>
                        <field name="comment" attrs="{'invisible': [('other', '=', False)],'required': [('other', '!=', False)]}"/>
					</group>
				</group>
				<footer>
					<button name="action_confirm" string="Confirmer"
						type="object" class="btn-primary" />
					<button string="Annuler" class="btn-secondary"
						special="cancel" />
				</footer>
			</form>
		</field>
	</record>

	<record id="action_reset_activity_wizard"
		model="ir.actions.act_window">
		<field name="name">Voulez-vous renétialiser l'activité?</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">reset.activity.wizard</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_reset_activity_wizard" />
		<field name="target">new</field>
	</record>

    </data>
</odoo>