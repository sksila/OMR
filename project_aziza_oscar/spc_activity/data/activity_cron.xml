<?xml version="1.0"?>
<odoo>
    <data>
        <!-- Cloturer la tâche la date de fin dépasse la date d'écheance  -->
        <record forcecreate="True" id="ir_cron_date_due_for_activity" model="ir.cron">
            <field name="name">Planification: Cloturer les activités non traité</field>
            <field name="model_id" ref="model_mail_activity"/>
            <field name="state">code</field>
            <field name="code">model._cron_untreated_activity()</field>
            <field eval="False" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(datetime.now() + timedelta(days=1)).strftime('%Y-%m-%d 20:00:00')"/>
            <field eval="False" name="doall" />
        </record>

             <!--Validation automatique des tâches -->
        <record forcecreate="True" id="ir_cron_validation_for_activity" model="ir.cron">
            <field name="name">Planification: Validation des les tâches</field>
            <field name="model_id" ref="model_mail_activity"/>
            <field name="state">code</field>
            <field name="code">model._cron_unvalidated_activity()</field>
            <field eval="False" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">2</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
<!--            <field name="nextcall" eval="(datetime.now() + timedelta(days=1)).strftime('%Y-%m-%d 20:00:00')"/>-->
            <field eval="False" name="doall" />
        </record>
    </data>
</odoo>