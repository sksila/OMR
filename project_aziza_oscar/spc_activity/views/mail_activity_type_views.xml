<?xml version="1.0"?>
<odoo>

     <record id="spc_mail_activity_type_view_form" model="ir.ui.view">
            <field name="name">mail.activity.type.view.form.inherit</field>
            <field name="model">mail.activity.type</field>
            <field name="inherit_id" ref="mail.mail_activity_type_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='delay_count']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='delay_count']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='delay_unit']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='delay_from']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <field name="res_model_id" position="attributes">
                    <attribute name="groups">base.group_no_one</attribute>
                </field>
                <field name="summary" position="attributes">
                    <attribute name="groups">base.group_no_one</attribute>
                </field>
                <field name="icon" position="attributes">
                    <attribute name="groups">base.group_no_one</attribute>
                </field>
                <field name="decoration_type" position="attributes">
                    <attribute name="groups">base.group_no_one</attribute>
                </field>
                <field name="force_next" position="attributes">
                    <attribute name="groups">base.group_no_one</attribute>
                </field>
                 <field name="default_next_type_id" position="attributes">
                    <attribute name="groups">base.group_no_one</attribute>
                </field>
                <field name="next_type_ids" position="attributes">
                    <attribute name="groups">base.group_no_one</attribute>
                </field>
                <xpath expr="//field[@name='decoration_type']" position="after">
                    <field name="is_confugirable"/>
                    <field name="model_id" attrs="{'invisible': [('is_confugirable','=', True)]}"/>
                    <field name="resource_ref" attrs="{'invisible': [('is_confugirable','=', False)]}"/>
                    <field name="group_ids"/>
                </xpath>
                <xpath expr="//field[@name='next_type_ids']" position="after">
                    <field name="date_due"/>
                    <field name="is_email"/>
                    <field name="manager_ids" widget="many2many_tags" attrs="{'invisible': [('is_email', '=', False)],'required': [('is_email', '=', True)]}"/>
                    <field name="is_validated"/>
                    <field name="validation_automatique"/>
                    <field name="date_validation" invisible ="1"/>
                    <label for="nbr_days_validation" attrs="{'invisible': [('validation_automatique', '=', False)]}"/>
                            <div class="o_row" attrs="{'invisible': [('validation_automatique', '=', False)]}">
                    <field name="nbr_days_validation"/> Jours
                    <field name="nbr_hours_validation"/> Heures
                            </div>
                </xpath>
            </field>
    </record>

    <record id="spc_mail_activity_type_view_tree" model="ir.ui.view">
        <field name="name">mail.activity.type.view.tree.inherit</field>
        <field name="model">mail.activity.type</field>
        <field name="inherit_id" ref="mail.mail_activity_type_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='summary']" position="replace">
                <field name="model_id"/>
            </xpath>
            <xpath expr="//field[@name='delay_count']" position="replace">
                <field name="is_email"/>
            </xpath>
            <xpath expr="//field[@name='delay_unit']" position="replace">
                <field name="is_validated"/>
            </xpath>
            <xpath expr="//field[@name='delay_from']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
<!--            <xpath expr="//field[@name='res_model_id']" position="attributes">-->
<!--                <attribute name="invisible">1</attribute>-->
<!--            </xpath>-->
        </field>
    </record>

</odoo>