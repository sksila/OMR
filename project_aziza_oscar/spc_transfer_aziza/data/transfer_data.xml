<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="0">

		<!-- sequence of bordereau -->
		<record id="sequence_bordereau_seq" model="ir.sequence">
			<field name="name">Numéro bordereau</field>
			<field name="code">oscar.bordereau</field>
			<field name="prefix">BRD-%(range_year)s-</field>
			<field eval="1" name="number_increment"/>
            <field eval="True" name="use_date_range"/>
			<field name="padding">5</field>
		</record>

		<!-- sequence of envelope -->
		<record id="sequence_envelope_seq" model="ir.sequence">
			<field name="name">Numéro envelope</field>
			<field name="code">oscar.envelope</field>
			<field name="prefix">ENV-%(range_year)s-</field>
			<field eval="1" name="number_increment"/>
            <field eval="True" name="use_date_range"/>
			<field name="padding">5</field>
		</record>

		<record id="content_sav_id" model="oscar.envelope.content">
			<field name="name">SAV</field>
			<field name="color" eval="1"/>
			<field name="isolated" eval="True"/>
			<field name="active" eval="True"/>
		</record>
		<record id="content_document_id" model="oscar.envelope.content">
			<field name="name">Document</field>
			<field name="color" eval="10"/>
			<field name="active" eval="True"/>
		</record>
		<record id="content_document_rh_id" model="oscar.envelope.content">
			<field name="name">Document RH</field>
			<field name="color" eval="9"/>
			<field name="has_reference" eval="True"/>
			<field name="isolated" eval="True"/>
			<field name="active" eval="True"/>
		</record>
		<record id="content_journee_id" model="oscar.envelope.content">
			<field name="name">Journée</field>
			<field name="color" eval="4"/>
			<field name="active" eval="True"/>
		</record>

	</data>
</odoo>