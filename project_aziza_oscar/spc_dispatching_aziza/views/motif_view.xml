<?xml version="1.0"?>
<odoo>
    <data>
        <record id="ha_view_dispatch_motif_form" model="ir.ui.view">
            <field name="name">dispatch.motif.form</field>
            <field name="model">oscar.dispatch.motif</field>
            <field name="arch" type="xml">
                <form string="Motif">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"
                               groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="ha_view_dispatch_motif_tree" model="ir.ui.view">
            <field name="name">dispatch.motif.tree</field>
            <field name="model">oscar.dispatch.motif</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Motif">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_dispatch_motif_form"
                model="ir.actions.act_window">
            <field name="name">Motif</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">oscar.dispatch.motif</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a dispatch.
                </p>
                <p>
                    Odoo helps you easily to manage your dispatch Category
                </p>
            </field>
        </record>

        <menuitem id="ha_menu_dispatch_motif" name="Motif"
                  action="action_dispatch_motif_form"
                  parent="ha_menu_root_dispatch_category" sequence="15"/>


    </data>
</odoo>