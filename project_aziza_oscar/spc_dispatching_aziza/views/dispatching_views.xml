<?xml version="1.0"?>
<odoo>
    <!-- Top menu item -->
    <menuitem
            id="ha_menu_dispatch_root"
            name="Dispatching"
            web_icon="spc_dispatching_aziza,static/description/icon.png"
            sequence="60"/>

    <menuitem id="ha_menu_dispatching"
              name="Dispatch"
              parent="ha_menu_dispatch_root"
              sequence="5"/>

    <!--        form view of Dispatching-->
    <record id="spc_view_dispatch_lines_form" model="ir.ui.view">
            <field name="name">dispatch.lines.form</field>
            <field name="model">oscar.dispatch.lines</field>
            <field name="arch" type="xml">
                <form>
  					<group>
  						<group>
  							<field name="product_id" options="{'no_create': True, 'no_open': True}" attrs="{'readonly':[('state','not in', ['draft'])]}"/>
  							<field name="designation_article" attrs="{'readonly':[('state','not in', ['draft'])]}"/>
                             <field name="category_id"  attrs="{'readonly':[('state','not in', ['draft'])]}" />
                             <field name="sub_category_id"  attrs="{'readonly':[('state','not in', ['draft'])]}"/>
                             <field name="contrat_id"  attrs="{'readonly':[('state','not in', ['draft'])]}"/>
                         </group>
  						<group>
                         <field name="oc_id" attrs="{'readonly':[('state','not in', ['draft'])]}"/>
  							<field name="unity" attrs="{'readonly':[('state','not in', ['draft'])]}"/>
                             <field name="motif_id"  attrs="{'readonly':[('state','not in', ['draft'])]}"/>
                             <field name="dlc"  attrs="{'readonly':[('state','not in', ['draft'])]}"/>
  							<field name="vl" attrs="{'readonly':[('state','not in', ['draft'])]}"/>
                         </group>

  						<field name="dispatch_lines_details_ids" attrs="{'invisible': [('state','not in','verification')], 'readonly':[('state','not in', ['draft','verification','verification_2'])]}">
 							<tree editable="bottom" >
		     					<field name="entrepot_id" attrs="{'readonly':[('state','not in', ['draft'])]}"/>
		     					<field name="num_cmd" attrs="{'required':[('state','in', ['verification'])]}"/>
		     					<field name="qty_estimated" sum="Total" attrs="{'readonly':[('state','not in', ['draft'])]}"/>
		     					<field name="qty_dispatched" attrs="{'readonly':[('state','not in', ['verification'])],'required':[('state','in', ['verification'])]}" />
		     					<field name="qty_ecart"/>
		     					<field name="motif_ecart" attrs="{'readonly':[('state','not in', ['verification'])]}" />
		     					<field name="qty_reel_dispatched" attrs="{'readonly':[('state','not in', ['verification_2'])],'required':[('state','in', ['verification_2'])]}" />
		     					<field name="qty_reel_ecart" />
		     					<field name="motif_ecart_reel" attrs="{'readonly':[('state','not in', ['verification_2'])]}" />
		     					<field name="state" invisible="1"/>
 							</tree>
  						</field>

                         <field name="dispatch_lines_details_second_ids" attrs="{'invisible': [('state','in','verification')], 'readonly':[('state','not in', ['draft','verification','verification_2'])]}">
  							<tree editable="bottom" >
			   					<field name="entrepot_id" attrs="{'readonly':[('state','not in', ['draft'])]}"/>
			   					<field name="qty_estimated" sum="Total" attrs="{'readonly':[('state','not in', ['draft'])]}"/>
			   					<field name="qty_dispatched" attrs="{'readonly':[('state','not in', ['verification'])],'required':[('state','in', ['verification'])]}" />
			   					<field name="qty_ecart"/>
			   					<field name="motif_ecart" attrs="{'readonly':[('state','not in', ['verification'])]}" />
			   					<field name="qty_reel_dispatched" attrs="{'readonly':[('state','not in', ['verification_2'])],'required':[('state','in', ['verification_2'])]}" />
			   					<field name="qty_reel_ecart" />
			   					<field name="motif_ecart_reel" attrs="{'readonly':[('state','not in', ['verification_2'])]}" />
			   					<field name="state" invisible="1"/>
  							</tree>
  						</field>
	  					<field name="state" invisible="1"/>
	  					<field name="total_qty_qty_estimated" invisible="1"/>
	  					<field name="total_qty_dispatched" invisible="1"/>
	  					<field name="total_qty_ecart" invisible="1"/>
  					</group>
  					<div class="oe_grey" colspan="4">
		                Écart 1 : Qté à dispatcher - Qté  dispatchée
		            </div>
		            <div class="oe_grey" colspan="4">
		                Écart 2 : Qté  dispatchée - Qté réelement livrée
		            </div>
  				</form>
            </field>
        </record>

    <record id="spc_view_dispatch_lines_tree" model="ir.ui.view">
        <field name="name">dispatch.lines.tree</field>
        <field name="model">oscar.dispatch.lines</field>
        <field name="arch" type="xml">
            <tree>
                <field name="oc_id" />
                <field name="product_id" />
                <field name="designation_article" />
                <field name="vl" />
                <field name="unity" />
                <field name="total_qty_qty_estimated" />
                <field name="total_qty_dispatched" />
                <field name="total_qty_ecart"/>
                <field name="qty_reel_dispatched"/>
                <field name="qty_reel_ecart"/>
            </tree>
        </field>
    </record>

    <record id="spc_action_dispatch_line_form" model="ir.actions.act_window">
            <field name="name">Dispatch Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">oscar.dispatch.lines</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{ 'create': False, 'delete': False, 'edit': False }</field>
            <field name="help" type="html">
              <p>
                Odoo helps you easily to manage your dispatch request
              </p>
            </field>
        </record>

    <menuitem id="ha_menu_dispatching_lines"
          name="Dispatch Details"
          parent="spc_dispatching_aziza.ha_menu_dispatch_root"
          sequence="7"/>

    <menuitem id="spc_menu_dispatch_line"
        name="Details dispatching"
        action="spc_action_dispatch_line_form"
        parent="ha_menu_dispatching_lines"
        sequence="5"/>

    <record id="ha_view_dispatching_form" model="ir.ui.view">
        <field name="name">oscar.dispatch.form</field>
        <field name="model">oscar.dispatch</field>
        <field name="arch" type="xml">
            <form string="Dispatching">
                <header>
                    <button name="%(action_rejet_wizard)d"
                            states="to_approve"
                            string="Remettre à l'initiateur"
                            type="action"
                            context="{'default_type_rejet':'reset'}"
                            groups="spc_oscar_aziza.group_direction_approvisionnement"
                    />
                    <button name="button_to_approve" states="draft"
                            string="Approbateur marchandise" type="object"
                            class="oe_highlight"
                            groups="spc_oscar_aziza.group_approvisioneur_aziza,spc_oscar_aziza.group_direction_approvisionnement"
                    />
                    <button name="button_approved"
                            states="to_approve"
                            string="Approuver"
                            type="object"
                            class="oe_highlight"
                            groups="spc_oscar_aziza.group_direction_approvisionnement"
                    />
                    <button name="button_verification"
                            states="approved"
                            string="Valider"
                            type="object"
                            class="oe_highlight"
                            groups="spc_oscar_aziza.group_bo_oscar,spc_oscar_aziza.group_DE"
                    />
                    <button name="button_verification_confirm_2"
                            states="verification"
                            string="Valider la quantité"
                            type="object"
                            class="oe_highlight"
                            groups="spc_oscar_aziza.group_bo_oscar"
                    />
<!--                     <button name="button_verification_2"-->
<!--                            states="verification"-->
<!--                            string="Valider la quantité"-->
<!--                            type="object"-->
<!--                             confirm="Vérifier bien que la quantité dispatchée n'est égale à zéro?"-->
<!--                            class="oe_highlight"-->
<!--                            groups="spc_oscar_aziza.group_bo_oscar"-->
<!--                    />-->

                    <button name="button_done_confirm"
                            states="verification_2"
                            string="Valider"
                            type="object"
                            class="oe_highlight"
                            groups="spc_oscar_aziza.group_approvisioneur_aziza,spc_oscar_aziza.group_direction_approvisionnement"
                    />
<!--                    <button name="button_done"-->
<!--                            states="verification_2"-->
<!--                            string="Valider"-->
<!--                            type="object"-->
<!--                            class="oe_highlight"-->
<!--                            groups="spc_oscar_aziza.group_approvisioneur_aziza,spc_oscar_aziza.group_direction_approvisionnement"-->
<!--                    />-->
                    <button name="%(action_rejet_wizard)d"
                            states="to_approve,approved"
                            string="Rejeter"
                            type="action"
                            context="{'default_type_rejet':'reject'}"
                            groups="spc_oscar_aziza.group_bo_oscar,spc_oscar_aziza.group_DE"
                    />

                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,to_approve,approved,verification,verification_2,done"
                           statusbar_colors='{"approved":"blue"}'/>
                </header>
                <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button" type="action"
                            name="%(action_reset_by_dispatch)d" icon="fa-repeat"
                            context="{'default_dispatch_id': active_id}"
                            attrs="{'invisible': [('reset_count', '=', 0)]}">
                        <field string="Remettre à l'initiateur" name="reset_count"
                               widget="statinfo"/>
                    </button>
                </div>
                <br/>
                <div class="oe_title">
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name" placeholder="Numéro"/>
                    </h1>
                </div>
                <group>
                    <group attrs="{'readonly':[('state','in', ['to_approve','approved','done','rejected'])]}">
                        <field name="date_dispatch"/>
                        <field name="approbateur_id" invisible="1"/>
                        <field name="approbateur_exec_id" invisible="1"/>
                    </group>
                    <group attrs="{'readonly':[('state','in', ['to_approve','approved','done','rejected'])]}">
                        <field name="requested_by"/>
                    </group>
                </group>
                <notebook>
                    <page string="Articles">
                        <field name="dispatch_lines"
                               attrs="{'readonly':[('state','not in', ['draft','to_approve', 'verification','verification_2'])]}">
                            <form>
                                <group>
                                    <group>
                                        <field name="product_id" options="{'no_create': True, 'no_open': True}"
                                               attrs="{'readonly':[('state','not in', ['draft'])]}"/>
                                        <field name="designation_article"
                                               attrs="{'readonly':[('state','not in', ['draft'])]}"/>
                                        <field name="category_id" attrs="{'readonly':[('state','not in', ['draft'])]}"/>
                                        <field name="sub_category_id"
                                               attrs="{'readonly':[('state','not in', ['draft'])]}"/>
                                        <field name="contrat_id" attrs="{'readonly':[('state','not in', ['draft'])]}"/>
                                    </group>
                                    <group>
                                        <field name="oc_id" attrs="{'readonly':[('state','not in', ['draft'])]}"/>
                                        <field name="unity" attrs="{'readonly':[('state','not in', ['draft'])]}"/>
                                        <field name="motif_id" attrs="{'readonly':[('state','not in', ['draft'])]}"/>
                                        <field name="dlc" attrs="{'readonly':[('state','not in', ['draft'])]}"/>
                                        <field name="vl" attrs="{'readonly':[('state','not in', ['draft'])]}"/>
                                    </group>
                                    <field name="dispatch_lines_details_ids"
                                           attrs="{'invisible': [('state','not in','verification')], 'readonly':[('state','not in', ['draft','verification','verification_2'])]}">
                                        <tree editable="bottom">
                                            <field name="entrepot_id"
                                                   attrs="{'readonly':[('state','not in', ['draft'])]}"/>
                                            <field name="num_cmd"
                                                   attrs="{'required':[('state','in', ['verification'])]}"/>
                                            <field name="qty_estimated" sum="Total"
                                                   attrs="{'readonly':[('state','not in', ['draft'])]}"/>
                                            <field name="qty_dispatched"
                                                   attrs="{'readonly':[('state','not in', ['verification'])],'required':[('state','in', ['verification'])]}"/>
                                            <field name="qty_ecart"/>
                                            <field name="motif_ecart"
                                                   attrs="{'readonly':[('state','not in', ['verification'])],'required':[('state','in', ['verification']),('qty_ecart','!=', 0)]}"/>
                                            <field name="qty_reel_dispatched"
                                                   attrs="{'readonly':[('state','not in', ['verification_2'])],'required':[('state','in', ['verification_2'])]}"/>
                                            <field name="qty_reel_ecart"/>
                                            <field name="motif_ecart_reel"
                                                   attrs="{'readonly':[('state','not in', ['verification_2'])],'required':[('state','in', ['verification_2']),('qty_reel_ecart','!=', 0)]}"/>
                                            <field name="state" invisible="1"/>
                                        </tree>
                                    </field>
                                    <field name="dispatch_lines_details_second_ids"
                                           attrs="{'invisible': [('state','in','verification')], 'readonly':[('state','not in', ['draft','verification','verification_2'])]}">
                                        <tree editable="bottom">
                                            <field name="entrepot_id"
                                                   attrs="{'readonly':[('state','not in', ['draft'])]}"/>
                                            <field name="qty_estimated" sum="Total"
                                                   attrs="{'readonly':[('state','not in', ['draft'])]}"/>
                                            <field name="qty_dispatched"
                                                   attrs="{'readonly':[('state','not in', ['verification'])],'required':[('state','in', ['verification'])]}"/>
                                            <field name="qty_ecart"/>
                                            <field name="motif_ecart"
                                                   attrs="{'readonly':[('state','not in', ['verification'])],'required':[('state','in', ['verification']),('qty_ecart','!=', 0)]}"/>
                                            <field name="qty_reel_dispatched"
                                                   attrs="{'readonly':[('state','not in', ['verification_2'])],'required':[('state','in', ['verification_2'])]}"/>
                                            <field name="qty_reel_ecart"/>
                                            <field name="motif_ecart_reel"
                                                   attrs="{'readonly':[('state','not in', ['verification_2'])],'required':[('state','in', ['verification_2']),('qty_reel_ecart','!=', 0)]}"/>
                                            <field name="state" invisible="1"/>
                                        </tree>
                                    </field>
                                    <field name="state" invisible="1"/>
                                    <field name="total_qty_qty_estimated" invisible="1"/>
                                    <field name="total_qty_dispatched" invisible="1"/>
                                    <field name="total_qty_ecart" invisible="1"/>
                                </group>
                                <div class="oe_grey" colspan="4">
                                    Écart 1 : Qté à dispatcher - Qté dispatchée
                                </div>
                                <div class="oe_grey" colspan="4">
                                    Écart 2 : Qté dispatchée - Qté réelement livrée
                                </div>
                            </form>
                            <tree>
                                <field name="oc_id"/>
                                <field name="product_id"/>
                                <field name="designation_article"/>
                                <field name="vl"/>
                                <field name="unity"/>
                                <field name="total_qty_qty_estimated"/>
                                <field name="total_qty_dispatched"/>
                                <field name="total_qty_ecart"/>
                                <field name="qty_reel_dispatched"/>
                                <field name="qty_reel_ecart"/>
                            </tree>
                        </field>
                        <div class="oe_grey" colspan="4">
                            Écart 1 : Total Qté à dispatcher - Total Qté dispatchée
                        </div>
                        <div class="oe_grey" colspan="4">
                            Écart 2 : Total Qté dispatchée - Total Qté réelement livrée
                        </div>
                    </page>
                    <page string="Motif de Rejet" states="rejected">
                        <group>
                            <group>
                                <field name="date_rejet"/>
                                <field name="motif_rejet"/>
                            </group>
                        </group>
                    </page>
                </notebook>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>

        </field>
    </record>

    <record id="ha_view_dispatch_tree" model="ir.ui.view">
        <field name="name">oscar.dispatch.tree</field>
        <field name="model">oscar.dispatch</field>
        <field name="arch" type="xml">
            <tree string="Dispatching">
                <field name="name"/>
                <field name="requested_by"/>
                <field name="date_dispatch"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="ha_view_dispatch_filter" model="ir.ui.view">
        <field name="name">dispatch.dispatch.list.select</field>
        <field name="model">oscar.dispatch</field>
        <field name="arch" type="xml">
            <search string="Search dispatch">
                <field name="name" string="Numéro"/>
                <separator/>
                <field name="requested_by"/>
                <separator/>
                <field name="date_dispatch"/>
                <separator/>
                <field name="state"/>
                <filter name ='requested_by' domain="[('requested_by','=', uid)]" help="My"/>
                <filter name="state_draft" string="Draft"
                        domain="[('state','=','draft')]"
                        help="Request is to be approved"/>
                <filter name="state_to_approve" string="To Approve"
                        domain="[('state','=','to_approve')]"
                        help="Request is to be approved"/>
                <filter name="state_approved" string="Approved"
                        domain="[('state','=','approved')]"
                        help="Request is approved"/>
                <filter name="state_rejected" string="Rejected"
                        domain="[('state','=','rejected')]"
                        help="Request is rejected"/>
                <filter name="state_done" string="Done"
                        domain="[('state','=','done')]"
                        help="Request is done"/>
                <group expand="0" string="Group By">
                    <filter name='requested_by' string="Utilisateur" domain="[]" context="{'group_by':'requested_by'}"/>
                    <filter name='date_dispatch' string="Par Mois" domain="[]" context="{'group_by':'date_dispatch'}"/>
                </group>
            </search>
        </field>
    </record>


