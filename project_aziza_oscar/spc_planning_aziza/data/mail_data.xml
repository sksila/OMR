<?xml version="1.0"?>
<odoo>
    <data>
        <template id="spc_message_activity_assigned">
            <div style="margin: 0px; padding: 0px; font-size: 13px;">
                <span t-field="activity.create_user_id.name"/>
                a crée une activité
                <span t-field="activity.activity_type_id.name"/>
                <t t-if="activity.summary">(<span t-field="activity.summary"/>)
                </t>
                assigné à
                <span t-field="activity.user_id"/>
                qui commencera à
                <span t-field="activity.start_datetime"/>
                à fermer pour<span t-field="activity.stop_datetime"/>.
                <br/>
                La référence de l'activité est :
                <span t-field="activity.res_name"/>
                <p style="margin: 16px 0px 16px 0px;">
                    <a t-att-href="'/mail/view?model=%s&amp;res_id=%s' % (activity.res_model, activity.res_id)"
                       style="background-color:#875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px;">
                        Voir
                        <t t-esc="model_description or 'document'"/>
                    </a>
                </p>
                <div t-if="activity.note" style="margin-top: 8px;" t-field="activity.note"/>
            </div>
        </template>
    </data>
</odoo>