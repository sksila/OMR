<?xml version="1.0" encoding="utf-8"?>

<odoo>
	<data>

		<!-- menu sous contract -->
		<menuitem name="Evaluation" id="menu_contract_evaluation"
			parent="menu_contract" sequence="20"
			 />

		<menuitem name="Magasin"
			id="menu_contract_evaluation_magasin" parent="menu_contract_evaluation"
			sequence="10"
			 />

		<!-- Evaluation form view magasin-->
		<record model="ir.ui.view" id="contract_evaluation_view_form">
			<field name="name">contract.evaluation.view.form</field>
			<field name="model">oscar.contract.evaluation</field>
			<field name="arch" type="xml">
				<form string="Evaluation">
					<header>
						<button name="validate_evaluation" string="Valider"
							type="object" states="new,validate_md,validate_dre,validate_dhrbp,validate_de"
							class="btn-primary oe_read_only"
							confirm="Vous désirez valider l'évaluation période d'essai?"
							/>
						<field name="state" widget="statusbar"
							statusbar_visible="new,validate_md,validate_dre,validate_dhrbp,validate_de,validate_dg"
							 />
					</header>
					<sheet>
						<div class="oe_title">
							<label for="name" class="oe_edit_only" />
							<h1>
								<field name="name" readonly="1"/>
							</h1>
						</div>

						<group>
							<group>
								<field name="type" invisible="1" />
								<field name="employee_id" attrs="{'readonly': [('state','=','validate_dg')]}"/>
								<field name="job_id" attrs="{'readonly': [('state','=','validate_dg')]}"/>
								<field name="department_id" attrs="{'readonly': [('state','=','validate_dg')]}"/>
								<field name="manager_id" attrs="{'readonly': [('state','=','validate_dg')]}"/>
								<field name="magasin_id" attrs="{'readonly': [('state','=','validate_dg')]}"/>
							</group>
							<group>
							    <field name="type_current_id" attrs="{'readonly': [('state','=','validate_dg')]}"/>
								<field name="date"  attrs="{'readonly': [('state','=','validate_dg')]}"/>
								<field name="date_embauche" attrs="{'readonly': [('state','=','validate_dg')]}"/>
								<field name="date_start" attrs="{'readonly': [('state','=','validate_dg')]}"/>
								<field name="trial_date_end" attrs="{'readonly': [('state','=','validate_dg')]}"/>
								<field name="remaining_leaves" attrs="{'readonly': [('state','=','validate_dg')]}"/>
							</group>
						</group>

						<notebook colspan="4">
							<page string="Critères sommaires d'évaluation">
								<field name="summary_criteria_ids">
									<tree editable="true" create="false">
										<field name="criteria_id" readonly="1"/>
										<field name="evaluation" widget="priority" />
										<field name="comment" />
									</tree>
								</field>
								<field name="notes" />
							</page>
							<page string="Points forts du collaborateur">
								<field name="strong_points" />
							</page>
							<page string="Aspects à améliorer">
								<field name="aspects_to_improve" />
							</page>
							<page string="Recommandations">
								<field name="recommendation_id" widget="radio" />
							</page>
							
						</notebook>
					</sheet>
					
					
					<div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
				</form>
			</field>
		</record>

