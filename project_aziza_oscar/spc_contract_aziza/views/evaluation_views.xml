					<div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
				</form>
			</field>
		</record>
		
		<!-- view filter -->
	 	<record id="view_evaluation_contrat_filter" model="ir.ui.view">
			<field name="name">evaluation.contrat.search.view</field>
			<field name="model">oscar.contract.evaluation</field>
			<field name="arch" type="xml">
				<search string="Rechercher des contrats évalués">
					<field name="name" />
					<field name="type_current_id" />
					<field name="employee_id"/>
					<field name="department_id"/>
					<field name="job_id"/>
					<field name="state"/>
					<separator />
					<filter string="Nouveau Evaluation" name="new_evaluation"
						domain="[('state', '=', 'new')]" />
					<filter string="Contrat évalué par MD" name="evaluation_contrat_md"
						domain="[('state', '=', 'validate_md')]" />
					<filter string="Contrat évalué par DRE" name="evaluation_contrat_dre"
						domain= "[('state', '=', 'validate_dre')]"/>
					
					<filter string="Contrat évalué par DHRBP" name="evaluation_contrat_dhrbp"
						domain="[('state', '=', 'validate_dhrbp')]" />
					
					<filter string="Contrat évalué par DE" name="evaluation_contrat_de"
						domain="[('state', '=', 'validate_de')]" />
					<filter string="Contrat évalué par DG" name="evaluation_contrat_dg"
						domain="[('state', '=', 'validate_dg')]" />
					
					<group expand="1" string="Group By">
						<filter string="Type de contrat en cours" name="type" context="{'group_by':'type_current_id'}" />
						<separator />
						<filter string="Employé" name="employé" context="{'group_by':'employee_id'}" />
						<separator />
						<filter string="Direction" name="direction" context="{'group_by':'department_id'}" />
						<separator />
						<filter string="Poste" name="poste" context="{'group_by':'job_id'}" />
						<separator />
						<filter name="Statut" string="statut" context="{'group_by':'state'}" />
						<separator />
						
					</group>
				</search>
			</field>
		</record> 
		
