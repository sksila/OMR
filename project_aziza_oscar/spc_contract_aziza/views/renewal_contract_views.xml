  <!-- view filter -->
		<record id="view_renewal_contrat_filter" model="ir.ui.view">
			<field name="name">renewal.contrat.search.view</field>
			<field name="model">oscar.contract.renewal</field>
			<field name="arch" type="xml">
				<search string="Rechercher des nouveaux contrats">
					<field name="name" />
					<field name="type_id" />
					<field name="employee_id"/>
					<field name="department_id"/>
					<field name="job_id"/>
					<field name="state"/>
					<separator /> 
					 <filter string="Nouveau Contrat" name="new_contrat"
						domain="[('state', '=', 'new')]" />
					<filter string="Contrat renouvelé par MD" name="renew_contrat_md"
						domain="[('state', '=', 'validate_md')]" />
					<filter string="Contrat renouvelé par DRE" name="renew_contrat_dre"
						domain= "[('state', '=', 'validate_dre')]"/>
					<filter string="Contrat renouvelé par DHRBP" name="renew_contrat_dhrbp"
						domain="[('state', '=', 'validate_dhrbp')]" />
					
					<filter string="Contrat renouvelé par DE" name="renew_contrat_de"
						domain="[('state', '=', 'validate_de')]" />
					<filter string="Contrat renouvelé par DG" name="renew_contrat_dg"
						domain="[('state', '=', 'validate_dg')]" />
					 
					
					<group expand="1" string="Group By">
						 <filter string="Type de contrat" name="type" context="{'group_by':'type_id'}" />
						 <separator />
						 <filter string="Employé" name="employé" context="{'group_by':'employee_id'}" />
						 <separator />
						 <filter string="Direction" name="direction" context="{'group_by':'department_id'}" />
						 <separator />
						 <filter string="Poste" name="poste" context="{'group_by':'job_id'}" />
						 <separator />
						 <filter name="Statut" string="statut de contrat" context="{'group_by':'state'}" /> 
						 <separator />
						
						
					</group>
				</search>
			</field>
		</record> 
		
		
		<!-- Renouvellement contrat form view : Magasin-->
		<record model="ir.ui.view" id="contract_renewal_view_form">
			<field name="name">contract.renewal.view.form</field>
			<field name="model">oscar.contract.renewal</field>
			<field name="arch" type="xml">
				<form string="Renouvellement contrat">
					<header>
						<button name="validate_contract_renewal" string="Valider"
							type="object"
							states="new,validate_md,validate_dre,validate_dhrbp,validate_de"
							class="btn-primary oe_read_only"
							confirm="Vous désirez valider la demande de renouvellement de contrat?"
							/>
						<field name="state" widget="statusbar"
							statusbar_visible="new,validate_md,validate_dre,validate_dhrbp,validate_de,validate_dg"/>
					</header>
					<sheet>
						<div class="oe_title">
							<label for="name" class="oe_edit_only" />
							<h1> 
								<field name="name" readonly="1"/>
							</h1>
						</div>

						<group>
							<group>
								<field name="type" invisible="1"/>
								<field name="employee_id" attrs="{'readonly': [('state','=','validate_dg')]}"/>
								<field name="job_id" attrs="{'readonly': [('state','=','validate_dg')]}"/>
								<field name="department_id" attrs="{'readonly': [('state','=','validate_dg')]}"/>
								<field name="manager_id" attrs="{'readonly': [('state','=','validate_dg')]}"/>
								<field name="magasin_id" attrs="{'readonly': [('state','=','validate_dg')]}"/>
							</group>
							<group>
							    <field name="type_current_id" attrs="{'readonly': [('state','=','validate_dg')]}"/>
								<field name="date" attrs="{'readonly': [('state','=','validate_dg')]}"/>
								<field name="date_embauche" attrs="{'readonly': [('state','=','validate_dg')]}"/>
								<field name="date_start" attrs="{'readonly': [('state','=','validate_dg')]}"/>
								<field name="date_end" attrs="{'readonly': [('state','=','validate_dg')]}"/>
								<field name="remaining_leaves" attrs="{'readonly': [('state','=','validate_dg')]}"/>
							</group>
						</group>

						<notebook colspan="4">
						
						
							<page string="Décision">
								<group>
									<group>
										<field name="type_id" attrs="{'invisible': [('end_contract', '!=', False)], 'required': [('end_contract', '=', False)],'readonly': [('state','=','validate_dg')]}"/>
										<field name="number_months" attrs="{'invisible': [('end_contract', '!=', False)],'readonly': [('state','=','validate_dg')]}"/>
										<field name="end_contract" attrs="{'readonly': [('state','=','validate_dg')]}"/>
									</group>
								</group>
							</page>
							
								<page string="Notes">
								<group>
									<group>
									<field name="notes" attrs="{'readonly': [('state','=','validate_dg')]}"/>
									</group>
								</group>
								</page>
						</notebook>
						
					</sheet>
					<div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
				</form>
			</field>
		</record>

