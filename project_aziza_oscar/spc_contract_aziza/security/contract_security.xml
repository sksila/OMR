<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="0">
	
		
    	<record id="employee_invisible" model="res.groups">
    		<field name="name">Employ√©</field>
    		<field name="category_id" ref="base.module_category_hidden"/>
		</record>
    	<record model="ir.ui.menu" id="hr.menu_hr_root">
    			<field name="groups_id" eval="[(6,0,[ref('employee_invisible')])]"/>
		</record>
	

    	<!-- ##################################### RULES ###################################### -->
     	
     	<!-- DRH -->
     	
     	 <record id="rule_drh_contract_renewal" model="ir.rule">
	        <field name="name">Renewal Contract : DRH</field>
	        <field name="model_id" ref="model_oscar_contract_renewal"/>
	        <field name="domain_force">[(1, '=', 1)]</field>
	        <field name="groups" eval="[(4,ref('spc_oscar_aziza.group_drh'))]"/>
	    </record>

		<record id="rule_drh_evaluation" model="ir.rule">
	        <field name="name">Evaluation : DRH</field>
	        <field name="model_id" ref="model_oscar_contract_evaluation"/>
	        <field name="domain_force">[(1, '=', 1)]</field>
	        <field name="groups" eval="[(4,ref('spc_oscar_aziza.group_drh'))]"/>
	    </record>
     	 
     	
     	<!-- Manager direct -->
     	
       	<record id="magasin_rule_renewal_resp_zone_contract" model="ir.rule">
	        <field name="name"> Responsable Zone Magasin Renewal Contract</field>
	        <field name="model_id" ref="model_oscar_contract_renewal"/>
	        <field name="domain_force">[('magasin_id.user_ids', 'child_of', [user.id])]</field>
	        <field name="groups" eval="[(4,ref('spc_oscar_aziza.group_reponsable_zone'))]"/>
	    </record>
	       
	    <record id="magasin_rule_evalution_resp_zone_contract" model="ir.rule">
	        <field name="name"> Responsable Zone Magasin Evaluation Contract</field>
	        <field name="model_id" ref="model_oscar_contract_evaluation"/>
	        <field name="domain_force">[('magasin_id.user_ids', 'child_of', [user.id])]</field>
	        <field name="groups" eval="[(4,ref('spc_oscar_aziza.group_reponsable_zone'))]"/>
	    </record>  
	    
	    <!-- DRE -->
     	
       	<record id="magasin_rule_renewal_dre_contract" model="ir.rule">
	        <field name="name"> DRE Renewal Contract</field>
	        <field name="model_id" ref="model_oscar_contract_renewal"/>
	        <field name="domain_force">[('magasin_id.user_ids', 'child_of', [user.id])]</field>
	        <field name="groups" eval="[(4,ref('spc_oscar_aziza.group_DRE'))]"/>
	    </record>
	       
	    <record id="magasin_rule_evalution_dre_contract" model="ir.rule">
	        <field name="name"> DRE Evaluation Contract</field>
	        <field name="model_id" ref="model_oscar_contract_evaluation"/>
	        <field name="domain_force">[('magasin_id.user_ids', 'child_of', [user.id])]</field>
	        <field name="groups" eval="[(4,ref('spc_oscar_aziza.group_DRE'))]"/>
	    </record>

		<!-- Direction -->

       	<record id="renewal_contract_rule_manager" model="ir.rule">
	        <field name="name">Renewal Contract : Direction</field>
	        <field name="model_id" ref="model_oscar_contract_renewal"/>
	        <field name="domain_force">[('department_id.manager_ids', 'child_of', [user.id])]</field>
	        <field name="groups" eval="[(4,ref('hr_contract.group_hr_contract_manager'))]"/>
	    </record>

	    <record id="evalution_rule_manager" model="ir.rule">
	        <field name="name">Evaluation : Direction</field>
	        <field name="model_id" ref="model_oscar_contract_evaluation"/>
	        <field name="domain_force">[('department_id.manager_ids', 'child_of', [user.id])]</field>
