<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="spc_product_type_form_view" model="ir.ui.view">
            <field name="name">spc_product.type.form</field>
            <field name="model">spc_product.type</field>
            <field name="arch" type="xml">
                <form string="Product type">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="spc_product_type_tree_view" model="ir.ui.view">
            <field name="name">spc_product.type.tree</field>
            <field name="model">spc_product.type</field>
            <field name="arch" type="xml">
                <tree string="Survey type">
                    <field name="name"/>
                </tree>
            </field>
        </record>



        <record id="spc_product_type_action" model="ir.actions.act_window">
            <field name="name">Product type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">spc_product.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
					Créer un nouveau type d'article.
				</p>
				<p>
					Oscar vous aide à gérer facilement vos Types d'articles.
				</p>
            </field>
        </record>
        
        <!--Product type menu item -->
		<menuitem id="spc_product_type_menu"
			name="Types d'articles"
			parent="spc_oscar_aziza.menu_oscar_product"
			action="spc_product_type_action" sequence="80" />

    </data>
</odoo>