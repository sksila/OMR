<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<menuitem id="menu_action_product_product_inherit"
			name="Articles" parent="spc_oscar_aziza.menu_oscar_product"
			action="product.product_template_action_all" sequence="60" />

		<!--Categories menu item -->
		<menuitem id="menu_product_category_inherit"
			name="Catégories d'articles"
			parent="spc_oscar_aziza.menu_oscar_product"
			action="product.product_category_action_form" sequence="70" />
			
		
		<record id="oscar_product_template_search_view" model="ir.ui.view">
			<field name="name">oscar.product.template.search</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_search_view" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='categ_id']" position="before">
					<field name="default_code" />
				</xpath>
			</field>
		</record>

		<record id="product_template_only_form_view_spc_survey_inherit" model="ir.ui.view">
			<field name="name">product.template.form</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_only_form_view" />
			<field name="arch" type="xml">
				<xpath expr="//div[2]" position="after">
					<group>
						<group>
							<field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" />
							<field name="spot_id" />
						</group>
					</group>
				</xpath>
				<xpath expr="//page[@name='general_information']"
					position="after">
					<page string="Details">
						<field name="product_detail_ids" widget="one2many_list">
							<tree editable="bottom">
								<field name="product_type" options="{'no_create_edit': True}" />
								<field name="site_ids" widget="many2many_tags" options="{'no_create_edit': True}" />
								<field name="product_id" invisible="1" />
							</tree>
						</field>
					</page>
					<page string="Fournisseurs">
						<group string="Liste des fournisseurs :">
							<field name="supplier_ids" widget="many2many_tags" nolabel="1" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
						</group>
					</page>
					<page string="Approvisionneurs">
						<group string="Liste des Approvisionneur :">
							<field name="approvisionneur_ids" widget="many2many_tags" nolabel="1" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
						</group>
					</page>
				</xpath>
			</field>
		</record>

		<record id="oscar_product_category_form_view" model="ir.ui.view">
			<field name="name">oscar.product.category.form</field>
			<field name="model">product.category</field>
			<field name="inherit_id" ref="product.product_category_form_view" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='parent_id']" position="before">
					<field name="code" required="1" />
				</xpath>
			</field>
		</record>

		<!-- Spot View Form -->
		<record id="view_product_spot_form" model="ir.ui.view">
			<field name="name">oscar.product.spot.form</field>
			<field name="model">oscar.product.spot</field>
			<field name="arch" type="xml">
				<form string="Spot form">
					<group colspan="4">
						<group colspan="2" col="2">
							<separator string="Spot" colspan="2" />
							<field name="name" />
						</group>
					</group>
				</form>
			</field>
		</record>
		
		<!-- Spot View Tree -->
		<record id="view_product_spot_tree" model="ir.ui.view">
			<field name="name">oscar.product.spot.tree</field>
			<field name="model">oscar.product.spot</field>
			<field name="arch" type="xml">
				<tree string="Spot Tree">
					<field name="name" />
				</tree>
			</field>
		</record>
		
		<record id="view_product_spot_act_window" model="ir.actions.act_window">
            <field name="name">Spots</field>
            <field name="res_model">oscar.product.spot</field>
           <field name="view_id" ref="spc_product.view_product_spot_tree"/>
			<field name="view_type">form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
					Créer un nouveau spot.
				</p>
				<p>
					Oscar vous aide à gérer facilement vos Spots.
				</p>
            </field>
        </record>
		
		<!--Spots menu item -->
		<menuitem id="menu_oscar_product_spot"
			name="Spots"
			parent="spc_oscar_aziza.menu_oscar_product"
			action="view_product_spot_act_window" sequence="75" />

		<!-- Etiquettes View Form -->
		<record id="view_product_tags_form" model="ir.ui.view">
			<field name="name">oscar.product.tag.form</field>
			<field name="model">oscar.product.tag</field>
			<field name="arch" type="xml">
				<form string="Etiquettes form">
					<group colspan="4">
						<group colspan="2" col="2">
							<separator string="Étiquettes" colspan="2" />
							<field name="name" />
						</group>
					</group>
				</form>
			</field>
		</record>

		<!-- Spot View Tree -->
		<record id="view_product_tags_tree" model="ir.ui.view">
			<field name="name">oscar.product.tag.tree</field>
			<field name="model">oscar.product.tag</field>
			<field name="arch" type="xml">
				<tree string="Etiquettes Tree">
					<field name="name" />
				</tree>
			</field>
		</record>

		<record id="view_product_tags_act_window" model="ir.actions.act_window">
            <field name="name">Étiquettes</field>
            <field name="res_model">oscar.product.tag</field>
           <field name="view_id" ref="spc_product.view_product_tags_tree"/>
			<field name="view_type">form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
					Créer une nouvelle Étiquettes.
				</p>
				<p>
					Oscar vous aide à gérer facilement vos Étiquettes.
				</p>
            </field>
        </record>

		<!--Spots menu item -->
		<menuitem id="menu_oscar_product_tags"
			name="Etiquettes"
			parent="spc_oscar_aziza.menu_oscar_product"
			action="view_product_tags_act_window" sequence="100" />

	</data>
</odoo>