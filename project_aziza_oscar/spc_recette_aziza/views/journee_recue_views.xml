<odoo>
	<data>

		<!-- view filter mode paiement recue -->
		<record id="view_mode_paiement_recue_filter" model="ir.ui.view">
			<field name="name">mode.paiement.recue.search.view</field>
			<field name="model">oscar.mode.paiement.recue</field>
			<field name="arch" type="xml">
				<search string="Rechercher Modes paiement">
					<field name="magasin_id" />
					<field name="montant_vr" />
					<field name="code_cheque" />
					<separator/>
					<filter string="Confirmé" name="confirmed_mode"
						domain="[('state', '=', 'confirmed')]" />
					<filter string="Vérifié" name="checked_mode" domain="[('state', '=', 'checked')]" />
					<filter string="Versé" name="paid_mode" domain="[('state', '=', 'paid')]" />
					<separator />
					<filter name="group_mode_by_mg" string="Magasin"
						context="{'group_by':'magasin_id'}" />
					<filter name="group_mode_by_journee" string="Journée"
						context="{'group_by':'journee_recue_id'}" />
					<filter name="group_mode_by_state" string="Statut"
						context="{'group_by':'state'}" />
				</search>
			</field>
		</record>

		<!-- Mode paiement recue tree view -->
		<record model="ir.ui.view" id="mode_paiement_recue_view_tree">
			<field name="name">mode.paiement.recue.view.tree</field>
			<field name="model">oscar.mode.paiement.recue</field>
			<field name="arch" type="xml">
				<tree>
					<field name="moyen_paiement_id" groups="spc_oscar_aziza.group_admin_oscar" />
					<field name="code_cheque" />
					<field name="oscar_bank_id" />
					<field name="cin" />
					<field name="name_user" />
					<field name="phone_user" />
					<field name="montant_vr" sum="Montant Total"/>
					<field name="user_id" invisible="1" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<!-- Mode paiement recue form view -->
		<record model="ir.ui.view" id="mode_paiement_recue_view_form">
			<field name="name">mode.paiement.recue.view.form</field>
			<field name="model">oscar.mode.paiement.recue</field>
			<field name="arch" type="xml">
				<form>
					<group>
						<group>
							<field name="moyen_paiement_id" groups="spc_oscar_aziza.group_admin_oscar" />
							<field name="magasin_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" />
							<field name="journee_recue_id" />
						</group>
						<group>
							<field name="code_cheque" />
							<field name="oscar_bank_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" />
							<field name="name_user" />
							<field name="cin" />
							<field name="phone_user" />
							<field name="fournisseur_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" />
							<field name="valeur" />
							<field name="nombre" />
							<field name="nombre_vr" />
							<field name="user_id" invisible="1" />
						</group>
					</group>
					<group>
						<group>
							<field name="montant_vr" />
						</group>
					</group>
				</form>
			</field>
		</record>

		<!-- view filter journee recue -->
		<record id="view_journee_recue_filter" model="ir.ui.view">
			<field name="name">journee.recue.search.view</field>
			<field name="model">oscar.journee.recue</field>
			<field name="arch" type="xml">
				<search string="Rechercher des journées">
					<field name="name" />
					<field name="references" />
					<filter string="Journée en route" name="road_journee"
						groups="spc_recette_aziza.group_agent_reception_oscar,spc_oscar_aziza.group_admin_oscar"
						domain="[('state', '=', 'road')]" />
					<filter string="Journée reçue" name="done_journee"
						domain="[('state', '=', 'done')]" />
					<separator />
					<filter string="Journée dispatchée" name="dispatchee_journee"
						groups="spc_recette_aziza.group_agent_reception_oscar,spc_oscar_aziza.group_admin_oscar"
						domain="[('state', 'in', ['done','waiting']),('controller_id', '!=', False)]" />
					<filter string="Journée non dispatchée" name="no_dispatchee_journee"
						groups="spc_recette_aziza.group_agent_reception_oscar,spc_oscar_aziza.group_admin_oscar"
						domain="[('state', '=', 'done'),('controller_id', '=', False)]" />
					<filter string="Journée en attente" name="waiting_journee"
						groups="spc_recette_aziza.group_agent_reception_oscar,spc_recette_aziza.group_agent_validation_oscar,spc_oscar_aziza.group_admin_oscar,spc_recette_aziza.group_agent_validation_ticket_resto_oscar"
						domain="[('state', 'in', ['waiting','waiting2'])]" />
					<filter string="Journée acceptée" name="accepted_journee"
						groups="spc_recette_aziza.group_agent_reception_oscar,spc_recette_aziza.group_agent_validation_oscar,spc_oscar_aziza.group_admin_oscar"
						domain="[('state', 'in', ['accepted','accepted1'])]" />
					<filter string="Journées en attente avec litige" name="waiting_journee_with_litige"
						groups="spc_recette_aziza.group_agent_validation_oscar,spc_oscar_aziza.group_admin_oscar"
						domain="[('state', '=', 'waiting1')]" />
					<filter string="Journée vérifiée" name="checked_journee"
						groups="spc_recette_aziza.group_agent_validation_oscar,spc_oscar_aziza.group_admin_oscar"
						domain="[('state', '=', 'checked')]" />
					<separator />
					<filter name="group_journee_by_mg" string="Magasin"
						context="{'group_by':'magasin_id'}" />
					<filter name="group_journee_by_state" string="Statut"
						context="{'group_by':'state'}" />
					<filter name="group_journee_by_date" string="Date Journée" context="{'group_by':'date_journee:day'}" />
				</search>
			</field>
		</record>

		<!-- actions liste de ecarts de la journee -->
		<record model="ir.actions.act_window" id="action_ecart_journee_sg">
			<field name="type">ir.actions.act_window</field>
			<field name="name">Liste des écarts</field>
			<field name="res_model">oscar.ecart</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('journee_recue_id', '=', active_id),('type', '=','ecart'),('state','=', 'justify')]</field>
			<field name="context">{
				'create': False,
				'edit': False,
				}
			</field>
		</record>

		<!-- actions liste de ecarts valides de la journee -->
		<record model="ir.actions.act_window" id="action_ecart_vl_journee_sg">
			<field name="type">ir.actions.act_window</field>
			<field name="name">Liste des écarts validés</field>
			<field name="res_model">oscar.ecart</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('journee_recue_id', '=', active_id),('type', '=','ecart'),('state','=', 'validated')]</field>
			<field name="context">{
				'create': False,
				'edit': False,
				}
			</field>
		</record>

		<!-- actions liste de litiges de la journee -->
		<record model="ir.actions.act_window" id="action_litige_journee_sg">
			<field name="type">ir.actions.act_window</field>
			<field name="name">Liste des litiges</field>
			<field name="res_model">oscar.ecart</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('journee_recue_id', '=', active_id),('type', '=','litige'),('state','=', 'justify')]</field>
			<field name="context">{
				'create': False,
				'edit': False,
				}
			</field>
		</record>

		<!-- Journee Recue form view -->
		<record model="ir.ui.view" id="journee_recue_view_form">
			<field name="name">journee.recue.view.form</field>
			<field name="model">oscar.journee.recue</field>
			<field name="arch" type="xml">
				<form>
					<header>
						<button string="Retour au statut Acceptée" type="object"
							name="retour_accepte" states="waiting2,accepted1,waiting1,checked" groups="spc_oscar_aziza.group_admin_oscar" />
						<button string="Retour au statut Acceptée TR" type="object"
							name="retour_accepte_tr" states="waiting1,checked" groups="spc_oscar_aziza.group_admin_oscar" />
						<button name="verifier_journee" string="Vérifier" type="object"
							states="accepted" groups="spc_recette_aziza.group_agent_validation_oscar"
							class="btn-primary oe_read_only" />
						<button string="Accepter TR" type="object" name="accept_tr_journees"
							states="waiting2" groups="spc_recette_aziza.group_agent_validation_ticket_resto_oscar" />
						<button name="verifier_tr" string="Vérifier TR &amp; CC"
							type="object" states="accepted1"
							groups="spc_recette_aziza.group_agent_validation_ticket_resto_oscar"
							class="btn-primary oe_read_only" />
						<button name="valider_journee" string="Valider" type="object"
							states="waiting1" groups="spc_recette_aziza.group_responsable_financier_oscar"
							class="btn-primary" />
						<field name="state" widget="statusbar"
							statusbar_visible="prepared,road,done,accepted,accepted1,checked" />
					</header>
					<sheet>
						<div class="oe_button_box" name="button_box">
							<button class="oe_stat_button" type="action"
								name="%(action_ecart_journee_sg)d"
								groups="spc_recette_aziza.group_agent_validation_oscar,spc_recette_aziza.group_responsable_financier_oscar"
								icon="fa-exclamation-circle" context="{'default_journee_recue_id': active_id}"
								attrs="{'invisible': [('ecart_count', '=', 0)]}" help="Écarts">
								<field string="Écart(s)" name="ecart_count" widget="statinfo" />
							</button>
							<button class="oe_stat_button" type="action"
								name="%(action_ecart_vl_journee_sg)d"
								groups="spc_recette_aziza.group_agent_validation_oscar,spc_recette_aziza.group_responsable_financier_oscar"
								icon="fa-check-circle" context="{'default_journee_recue_id': active_id}"
								attrs="{'invisible': [('ecart_vl_count', '=', 0)]}" help="Écarts validés">
								<field string="Écart(s) validé(s)" name="ecart_vl_count"
									widget="statinfo" />
							</button>
							<button class="oe_stat_button" type="action"
								name="%(action_litige_journee_sg)d" groups="spc_recette_aziza.group_responsable_financier_oscar,spc_oscar_aziza.group_bo_oscar"
								icon="fa-legal" context="{'default_journee_recue_id': active_id}"
								attrs="{'invisible': [('litige_count', '=', 0)]}" help="Litiges">
								<field string="Litige(s)" name="litige_count" widget="statinfo" />
							</button>
						</div>
						<div class="oe_title">
							<label for="name" class="oe_edit_only" />
							<h1>
								<field name="name" />
							</h1>
						</div>
						<group>
							<group>
								<field name="magasin_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" />
								<field name="user_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" />
								<field name="controller_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" />
								<field name="controller_tr_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" />
								<!-- <field name="bordereau_id" /> -->
							</group>
						</group>
						<notebook colspan="4">
							<page string="Espéce"
								groups="spc_recette_aziza.group_agent_validation_oscar,spc_recette_aziza.group_responsable_financier_oscar">
								<group
									groups="spc_recette_aziza.group_agent_validation_oscar,spc_recette_aziza.group_responsable_financier_oscar">
									<field name="montant_espece" />
									<field name="montant_espece_vr" />
								</group>
							</page>
							<page string="TR"
								groups="spc_recette_aziza.group_agent_validation_ticket_resto_oscar,spc_recette_aziza.group_responsable_financier_oscar">
								<field name="mode_tr_ids" context="{'default_code': '6'}">
									<tree editable="true">
										<field name="moyen_paiement_id" groups="spc_oscar_aziza.group_admin_oscar" />
										<field name="fournisseur_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" attrs="{'readonly':[('user_id','!=', 'uid')]}" required="True" />
										<field name="valeur" attrs="{'readonly':[('user_id','!=', 'uid')]}" required="True" />
										<field name="nombre" readonly="True" />
										<field name="nombre_vr" required="True" />
										<field name="montant_compute" sum="Total TR" />
										<button name="verifier_paiement" string="Vérifier"
											type="object" attrs="{'invisible': ['|',('state','in', ['checked','paid']),('state_journee','=','checked')]}"
											groups="spc_recette_aziza.group_agent_validation_ticket_resto_oscar" />
										<button name="annuler_paiement" string="Annuler"
											type="object" attrs="{'invisible': ['|',('state','in', ['confirmed','paid']),('state_journee','=','checked')]}"
											groups="spc_recette_aziza.group_agent_validation_ticket_resto_oscar" />
										<field name="montant_compute_vr" sum="Total TR" />
										<field name="user_id" groups="spc_oscar_aziza.group_admin_oscar" />
										<field name="state" />
										<field name="state_journee" invisible="1"/>
									</tree>
								</field>
							</page>
							<page string="CC"
								groups="spc_recette_aziza.group_agent_validation_ticket_resto_oscar,spc_recette_aziza.group_responsable_financier_oscar">
								<field name="mode_cc_ids" context="{'default_code': '5'}">
									<tree editable="true">
										<field name="moyen_paiement_id" groups="spc_oscar_aziza.group_admin_oscar" />
										<field name="fournisseur_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" attrs="{'readonly':[('user_id','!=', 'uid')]}" required="True" />
										<field name="valeur" attrs="{'readonly':[('user_id','!=', 'uid')]}" required="True" />
										<field name="nombre" readonly="True" />
										<field name="nombre_vr" required="True" />
										<field name="montant_compute" sum="Total CC" />
										<button name="verifier_paiement" string="Vérifier"
											type="object" attrs="{'invisible': ['|',('state','in', ['checked','paid']),('state_journee','=','checked')]}"
											groups="spc_recette_aziza.group_agent_validation_ticket_resto_oscar" />
										<button name="annuler_paiement" string="Annuler"
											type="object" attrs="{'invisible': ['|',('state','in', ['confirmed','paid']),('state_journee','=','checked')]}"
											groups="spc_recette_aziza.group_agent_validation_ticket_resto_oscar" />
										<field name="montant_compute_vr" sum="Total CC" />
										<field name="user_id" groups="spc_oscar_aziza.group_admin_oscar" />
										<field name="state" />
										<field name="state_journee" invisible="1"/>
									</tree>
								</field>
							</page>
							<page string="CB"
								groups="spc_recette_aziza.group_agent_validation_oscar,spc_recette_aziza.group_responsable_financier_oscar">
								<group>
									<field name="bank_tpe_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" />
								</group>
								<field name="mode_cb_ids" context="{'default_code': '3'}">
									<tree editable="true">
										<field name="moyen_paiement_id" groups="spc_oscar_aziza.group_admin_oscar" />
										<field name="bank_tpe_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" />
										<field name="montant" readonly="True" sum="Total CB" />
										<field name="montant_vr" required="True" attrs="{'readonly':[('user_id','!=', 'uid')]}" sum="Total CB" />
										<button name="verifier_paiement" string="Vérifier"
											type="object" attrs="{'invisible': ['|',('state','in', ['checked','paid']),('state_journee','=','checked')]}"
											groups="spc_recette_aziza.group_agent_validation_oscar" />
										<button name="annuler_paiement" string="Annuler"
											type="object" attrs="{'invisible': ['|',('state','in', ['confirmed','paid']),('state_journee','=','checked')]}"
											groups="spc_recette_aziza.group_agent_validation_oscar" />
										<field name="user_id" groups="spc_oscar_aziza.group_admin_oscar" />
										<field name="state" />
										<field name="state_journee" invisible="1"/>
									</tree>
								</field>
							</page>
							<page string="CS"
								groups="spc_recette_aziza.group_agent_validation_oscar,spc_recette_aziza.group_responsable_financier_oscar">
								<field name="mode_cs_ids" context="{'default_code': '8'}">
									<tree editable="true">
										<field name="moyen_paiement_id" groups="spc_oscar_aziza.group_admin_oscar" />
										<field name="montant" readonly="True" sum="CS" />
										<field name="montant_vr" required="True" sum="CS" />
										<button name="verifier_paiement" string="Vérifier"
											type="object" attrs="{'invisible': ['|',('state','in', ['checked','paid']),('state_journee','=','checked')]}"
											groups="spc_recette_aziza.group_agent_validation_oscar" />
										<button name="annuler_paiement" string="Annuler"
											type="object" attrs="{'invisible': ['|',('state','in', ['confirmed','paid']),('state_journee','=','checked')]}"
											groups="spc_recette_aziza.group_agent_validation_oscar" />
										<field name="user_id" groups="spc_oscar_aziza.group_admin_oscar" />
										<field name="state" />
										<field name="state_journee" invisible="1"/>
									</tree>
								</field>
							</page>
							<page string="Chèque"
								groups="spc_recette_aziza.group_agent_validation_oscar,spc_recette_aziza.group_responsable_financier_oscar">
								<field name="mode_cheque_ids" context="{'default_code': '2'}">
									<tree editable="true">
										<field name="moyen_paiement_id" groups="spc_oscar_aziza.group_admin_oscar" attrs="{'readonly':[('state','=', 'paid')]}" />
										<field name="code_cheque" attrs="{'readonly':['|',('user_id','!=', 'uid'),('state','=', 'paid')]}" />
										<field name="oscar_bank_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" attrs="{'readonly':['|',('user_id','!=', 'uid'),('state','=', 'paid')]}" />
										<field name="cin" attrs="{'readonly':['|',('user_id','!=', 'uid'),('state','=', 'paid')]}" />
										<field name="name_user" attrs="{'readonly':['|',('user_id','!=', 'uid'),('state','=', 'paid')]}" />
										<field name="phone_user" attrs="{'readonly':['|',('user_id','!=', 'uid'),('state','=', 'paid')]}" />
										<field name="montant" readonly="True" sum="Total Chèque" />
										<field name="montant_vr" required="True" sum="Total Chèque" attrs="{'readonly':[('state','=', 'paid')]}" />
										<button name="verifier_paiement" string="Vérifier"
											type="object" attrs="{'invisible': ['|',('state','in', ['checked','paid']),('state_journee','=','checked')]}"
											groups="spc_recette_aziza.group_agent_validation_oscar" />
										<button name="annuler_paiement" string="Annuler"
											type="object" attrs="{'invisible': ['|',('state','in', ['confirmed','paid']),('state_journee','=','checked')]}"
											groups="spc_recette_aziza.group_agent_validation_oscar" />
										<field name="user_id" groups="spc_oscar_aziza.group_admin_oscar" attrs="{'readonly':[('state','=', 'paid')]}" />
										<field name="state" />
										<field name="state_journee" invisible="1"/>
									</tree>
								</field>
							</page>
							<!-- SUPPRESSION LE CHAMP BON AZIZA - SUPAZ-41 -->
							<page string="Bon AZIZA" invisible="1">
								<field name="mode_ba_ids" context="{'default_code': '12'}">
									<tree editable="true">
										<field name="moyen_paiement_id" groups="spc_oscar_aziza.group_admin_oscar"
											required="True" />
										<field name="montant" readonly="True" sum="Total Bon AZIZA" />
										<field name="montant_vr" required="True" sum="Total Bon AZIZA" />
										<field name="user_id" groups="spc_oscar_aziza.group_admin_oscar" />
									</tree>
								</field>
							</page>
							<page string="VC"
								groups="spc_recette_aziza.group_agent_validation_oscar,spc_recette_aziza.group_responsable_financier_oscar">
								<field name="mode_vc_ids" context="{'default_code': 7}">
									<tree editable="true">
										<field name="moyen_paiement_id" groups="spc_oscar_aziza.group_admin_oscar" required="True" />
										<field name="montant" readonly="True" sum="Total Vente à crédit" />
										<field name="montant_vr" required="True" sum="Total Vente à crédit" />
										<field name="user_id" groups="spc_oscar_aziza.group_admin_oscar" />
									</tree>
								</field>
							</page>
							<page string="Autres Paiement"
								groups="spc_recette_aziza.group_agent_validation_oscar,spc_recette_aziza.group_responsable_financier_oscar">
								<field name="mode_other_ids">
									<tree editable="true">
										<field name="moyen_paiement_id" context="{'default_is_other': True}" domain="[('is_other', '=', True)]" required="True" />
										<field name="montant" readonly="True" sum="Total" />
										<field name="montant_vr" required="True" sum="Total" />
										<field name="user_id" groups="spc_oscar_aziza.group_admin_oscar" />
									</tree>
								</field>
							</page>
							<page string="Action Flyers" groups="spc_recette_aziza.group_agent_validation_oscar,spc_recette_aziza.group_responsable_financier_oscar">
								<field name="flyer_ids" context="{'default_code': '99'}">
