<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    
    <!-- view filter gold journee-->
    <record id="view_gold_journee_filter" model="ir.ui.view">
      <field name="name">gold.journee.search.view</field>
      <field name="model">oscar.gold.journee</field>
      <field name="arch" type="xml">
        <search string="Rechercher des journées">
        	<field name="code_magasin" />
        	<separator/>
        	<filter name="group_journee_by_date" string="Date Journée" context="{'group_by':'date_journee:day'}" />
          	<separator/>
          	<filter name="group_journee_by_mg" string="Code Magasin" context="{'group_by':'code_magasin'}" />
        </search>
      </field>
    </record>
    	
	   	<!-- Journee form view  -->
	    <record model="ir.ui.view" id="oscar_gold_journee_view_form">
	      <field name="name">oscar.gold.journee.view.form</field>
	      <field name="model">oscar.gold.journee</field>
	      <field name="arch" type="xml">
	        <form>
	        	<group>
	        		<group>
	        			<field name="date_journee" />
		   				<field name="code_magasin"/>
		   				<field name="code_caissier" />
	        		</group>
	        		<group>
	        			<field name="code_paiement" />
		   				<field name="code_fournisseur"/>
		   				<field name="cin_client" />
		   				<field name="valeur_tr" />
		   				<field name="nombre_tr" />
		   				<field name="montant" />
	        		</group>
	        	</group>
	        </form>
	      </field>
	    </record>
	    
	    <!-- Journee tree view  -->
	    <record model="ir.ui.view" id="oscar_gold_journee_view_tree">
	      <field name="name">oscar.gold.journee.view.tree</field>
	      <field name="model">oscar.gold.journee</field>
	      <field name="arch" type="xml">
	        <tree editable="top" >
   				<field name="date_journee" />
   				<field name="code_magasin" />
   				<field name="code_caissier" />
   				<field name="code_paiement" />
   				<field name="code_fournisseur" />
   				<field name="cin_client" />
   				<field name="valeur_tr" />
   				<field name="nombre_tr" />
   				<field name="montant" sum="Total Montant"/>
	        </tree>
	      </field>
	    </record>
	    
	    
		<!-- actions liste de journees (GOLD) -->
		<record model="ir.actions.act_window" id="action_oscar_journee_gold">
			  <field name="type">ir.actions.act_window</field>
			  <field name="name">Liste des journées (GOLD)</field>
			  <field name="res_model">oscar.gold.journee</field>
			  <field name="view_mode">tree,form</field>
			  <field name="context">{
			    'create': True,
			    }</field>
		</record>
		
		    
		<!-- menu Journee (Gold) -->
		<menuitem id="menu_oscar_journee_gold"
		    name="Journées"
		    action="action_oscar_journee_gold"
		    parent="spc_oscar_aziza.menu_gold_view"
		    sequence="10"/>

	   
	</data>
</odoo>