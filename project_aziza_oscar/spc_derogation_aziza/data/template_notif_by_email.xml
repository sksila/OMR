<odoo>

    <data noupdate="0">
        <!--Email template -->
        <record id="spc_email_template_derog" model="mail.template">
            <field name="name">Dérogation: Send by email</field>
            <field name="model_id" ref="spc_derogation_aziza.model_derogation_derogation"/>
            <field name="email_from">${object.user_id.email_formatted |safe}</field>
            <field name="email_to">${(not object.partner_id and object.email_from or '') | safe}</field>
            <field name="partner_to">${object.partner_id.id or ''}</field>
            <field name="subject">Dérogation (${object.name})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        <p>Bonjour,</p>
                        <p>Veuillez approuver ma dérogation numéro  ${object.name}.</p>
                    </p>
                </div>
            </field>
        </record>

          <record id="spc_email_template_derog_cloture" model="mail.template">
            <field name="name">Dérogation Cloturée: Send by email</field>
            <field name="model_id" ref="spc_derogation_aziza.model_derogation_derogation"/>
            <field name="email_from">${object.user_id.email_formatted |safe}</field>
            <field name="email_to">${(not object.partner_id and object.email_from or '') | safe}</field>
            <field name="partner_to">${object.partner_id.id or ''}</field>
            <field name="subject">Dérogation Cloturée(${object.name})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        <p>Bonjour,</p>
                        <p>La demande de dérogation numéro  ${object.name} est cloturée.</p>
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>
