<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_comment_wizard" model="ir.ui.view">
		<field name="name">comment.wizard.form</field>
		<field name="model">comment.wizard</field>
		<field name="arch" type="xml">
			<form>
				<field name="derogation_id" invisible="1"/>
				<field name="type_comment" invisible="1"/>
				<group>
					<group>
						<field name="comment"/>
					</group>
				</group>
				<footer>
					<button name="action_confirm" string="Valider"
						type="object" class="btn-primary" />
					<button string="Annuler" class="btn-secondary"
						special="cancel" />
				</footer>
			</form>
		</field>
	</record>
	
	<record id="action_comment_wizard"
		model="ir.actions.act_window">
		<field name="name">Veuillez saisir des commentaires</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">comment.wizard</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_comment_wizard" />
		<field name="target">new</field>
	</record>

</odoo>
        