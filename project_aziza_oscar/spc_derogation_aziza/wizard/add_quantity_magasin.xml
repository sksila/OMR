    <record id="wizard_add_quantity_view_inherited_magasin" model="ir.ui.view">
        <field name="inherit_id" ref="wizard_add_quantity_view"/>
        <field name="groups_id" eval="[(6, 0, [ref('spc_oscar_aziza.group_reponsable_magasin')])]"/>
        <field name="model">derogation.derogation</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='quantity']" position="attributes">
                <attribute name="attrs">{'required':1}</attribute>
            </xpath>
            <xpath expr="//field[@name='magasin_id']" position="attributes">
                <attribute name="attrs">{'required':1}</attribute>
            </xpath>
            <xpath expr="//field[@name='responsable_magasin_id']" position="attributes">
                <attribute name="attrs">{'required':1}</attribute>
            </xpath>
            <xpath expr="//field[@name='bon_retour']" position="attributes">
                <attribute name="attrs">{'required':1}</attribute>
            </xpath>
        </field>
    </record>
