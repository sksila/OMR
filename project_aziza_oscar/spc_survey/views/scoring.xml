<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="scoring_form" model="ir.ui.view">
            <field name="name">spc_survey.scoring.form</field>
            <field name="model">spc_survey.scoring</field>
            <field name="arch" type="xml">
                <form string="Scoring" create="false">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="name" readonly="1"/>
                            </h1>
                        </div>
                        <group string="Scoring criteria">
                            <field name="scoring_criteria_ids" nolabel="1">

                                <tree editable="bottom">
                                    <field name="criteria_name" required="1"/>
                                    <field name="question_ids" widget="many2many_tags" domain="[('id','in',parent.page_question_ids)]" options="{'no_create': True, 'no_create_edit':True}" nolabel="1" required="1"/>
                                    <field name="column_ids" widget="many2many_tags" domain="[('id','in',domain_columns_ids)]" options="{'no_create': True, 'no_create_edit':True}"/>
                                    <field name="column_value" />
                                    <field name="operation" />
                                    <field name="coefficient" />
                                    <field name="symbol" />
                                    <field name="scoring_id" invisible="1"/>
                                    <field name="domain_columns_ids" invisible="1" />
                                    <field name="survey_id" invisible="1" />
                                    <field name="page_id" invisible="1" />
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="criteria_name" />
                                            <field name="question_ids" widget="many2many_tags" />
                                            <field name="column_ids" widget="many2many_tags" />

                                        </group>
                                        <group>
                                            <field name="column_value" />
                                            <field name="operation" />
                                            <field name="coefficient" />
                                            <field name="symbol" />
                                            <field name="scoring_id" invisible="1"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </group>
                        <group string="Page final score">
                            <group>
                                <button type="action" name="%(spc_survey.spc_survey_page_final_score_wizard_action)d"
                                            string="Choose criteria" class="oe_highlight oe_edit_only"
									        context="{'criteria': scoring_criteria_ids, 'default_scoring_id': id}" />
                            </group>
                            <group>
                                <field name="final_score_title" />
                                <field name="final_score_criteria" widget="many2many_tags" />
                            </group>
                        </group>
                        <field name="survey_id" invisible="1" />
                        <field name="page_id" invisible="1" />
                        <field name="page_question_ids" invisible="1" />
                        <field name="id" invisible="1" />
                    </sheet>
                </form>
            </field>
        </record>

        <record id="scoring_tree" model="ir.ui.view">
            <field name="name">spc_survey.scoring.tree</field>
            <field name="model">spc_survey.scoring</field>
            <field name="arch" type="xml">
                <tree string="Scoring" create="false">
                    <field name="name"/>
                    <field name="page_id" invisible="1" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_scoring">
			<field name="name">Scoring</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">spc_survey.scoring</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('page_id', '=', active_id)]</field>
			<field name="context">{}</field>
		</record>

        <record id="scoring_criteria_tree" model="ir.ui.view">
            <field name="name">spc_survey.scoring_criteria.tree</field>
            <field name="model">spc_survey.scoring.criteria</field>
            <field name="arch" type="xml">
                <tree string="Scoring" create="false">
                    <field name="survey_id" />
                    <field name="page_id" />
                    <field name="criteria_name" />
                </tree>
            </field>
        </record>

    </data>
</odoo>