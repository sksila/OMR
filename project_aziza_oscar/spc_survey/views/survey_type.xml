<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="spc_survey_type_form_view" model="ir.ui.view">
            <field name="name">spc_survey.type.form</field>
            <field name="model">spc_survey.type</field>
            <field name="arch" type="xml">
                <form string="Survey type">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Survey type title"/>
                            </h1>
                            <group string="Groups">
                                <field name="group_ids" nolabel="1" widget="many2many_tags" options="{'no_quick_create': True, 'no_create_edit' : True}"  />
                            </group>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="spc_survey_type_tree_view" model="ir.ui.view">
            <field name="name">spc_survey.type.tree</field>
            <field name="model">spc_survey.type</field>
            <field name="arch" type="xml">
                <tree string="Survey type">
                    <field name="name"/>
                </tree>
            </field>
        </record>



        <record id="spc_survey_type_action" model="ir.actions.act_window">
            <field name="name">Survey type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">spc_survey.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Add survey type.
                </p>
            </field>
        </record>

        <menuitem name="Survey type" id="spc_survey_type_menu" parent="survey.menu_surveys_configuration" action="spc_survey.spc_survey_type_action" sequence="80"/>

    </data>
</odoo>