<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="report_structure_form" model="ir.ui.view">
            <field name="name">spc_survey.report_structure.form</field>
            <field name="model">spc_survey.report_structure</field>
            <field name="arch" type="xml">
                <form string="Report structure">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Title"/>
                            </h1>
                        </div>
                        <group string="Line title">
                            <field name="line_title" />
                        </group>
                        <group string="Column's titles">
                            <group>
                                <field name="column1"/>
                                <field name="column3"/>
                                <field name="column5"/>
                            </group>
                            <group>
                                <field name="column2"/>
                                <field name="column4"/>
                                <field name="column6"/>
                            </group>
                        </group>
                        <group string="Details">
                            <field name="detail_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="column_title"/>
                                    <field name="column1_id" options="{'no_create': True, 'no_create_edit':True}" domain="[('id','in',parent.domain_columns)]"/>
                                    <field name="column2_id" options="{'no_create': True, 'no_create_edit':True}" domain="[('id','in',parent.domain_columns)]"/>
                                    <field name="column3_id" options="{'no_create': True, 'no_create_edit':True}" domain="[('id','in',parent.domain_columns)]"/>
                                    <field name="column4_id" options="{'no_create': True, 'no_create_edit':True}" domain="[('id','in',parent.domain_columns)]"/>
                                    <field name="column5_id" options="{'no_create': True, 'no_create_edit':True}" domain="[('id','in',parent.domain_columns)]"/>
                                    <field name="column6_id" options="{'no_create': True, 'no_create_edit':True}" domain="[('id','in',parent.domain_columns)]"/>
                                    <field name="report_structure_id" invisible="1" />
                                </tree>
                                <form>
                                    <group>
                                        <field name="column_title"/>
                                        <field name="column1_id" />
                                        <field name="column2_id" />
                                        <field name="column3_id" />
                                        <field name="column4_id" />
                                        <field name="column5_id" />
                                        <field name="column6_id" />
                                    </group>
                                </form>
                            </field>
                        </group>
                        <field name="survey_session_id" invisible="1" />
                        <field name="domain_columns" invisible="1" />
                    </sheet>
                </form>
            </field>
        </record>

        <record id="report_structure_tree" model="ir.ui.view">
            <field name="name">spc_survey.report_structure.tree</field>
            <field name="model">spc_survey.report_structure</field>
            <field name="arch" type="xml">
                <tree string="Report structure">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_report_structure">
			<field name="name">Report structure</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">spc_survey.report_structure</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('survey_session_id', '=', active_id)]</field>
			<field name="context">{}</field>
		</record>


    </data>
</odoo>