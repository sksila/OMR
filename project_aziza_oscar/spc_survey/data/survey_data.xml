<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.menu" id="survey.menu_survey_page_form1">
    		<field name="groups_id" eval="[(6,0,[ref('make_invisible')])]"/>
		</record>

        <record model="ir.ui.menu" id="survey.menu_survey_question_form1">
    		<field name="groups_id" eval="[(6,0,[ref('make_invisible')])]"/>
		</record>

        <record model="ir.ui.menu" id="survey.menu_survey_label_form1">
    		<field name="groups_id" eval="[(6,0,[ref('make_invisible')])]"/>
		</record>

        <record model="ir.ui.menu" id="survey.menu_survey_response_line_form">
    		<field name="groups_id" eval="[(6,0,[ref('make_invisible')])]"/>
		</record>

		<record model='ir.ui.menu' id='survey.menu_surveys_configuration'>
    		<field name="groups_id" eval="[(6,0,[ref('spc_survey.group_audit_manager')])]"/>
		</record>

		<record id="survey.survey_action_server_clean_test_answers" model="ir.actions.server">
            <field name="name">Clean test answers</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_survey_survey" />
            <field name="binding_model_id" ref="model_survey_survey" />
            <field name="state">code</field>
            <field name="code">
				if env.user.has_group('spc_survey.group_audit_manager'):
				if records:
					env['survey.user_input'].search([('survey_id', 'in', records.ids), ('test_entry', '=', 'True')]).unlink()
            </field>
        </record>

		<delete model="ir.actions.act_window" id="survey.act_survey_pages"/>
		<delete model="ir.actions.act_window" id="survey.act_survey_question"/>

    </data>
</odoo>