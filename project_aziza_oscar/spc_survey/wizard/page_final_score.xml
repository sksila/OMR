<?xml version="1.0"?>
<odoo>


	<record id="spc_survey_page_final_score_wizard_form" model="ir.ui.view">
		<field name="name">spc_survey.page_final_score.form</field>
		<field name="model">spc_survey.page_final_score</field>
		<field name="arch" type="xml">
			<form string="Page final score">
				<group>
					<field name="name" />
					<field name="criteria_ids" widget="many2many_checkboxes" domain="[('id', 'in', context.get('criteria', []))]"/>
				</group>
				<footer>
					<button name="save" string="Submit" type="object" class="btn btn-sm" />
					<button string="Cancel" class="btn btn-sm btn-default" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

	<record id="spc_survey_page_final_score_wizard_action" model="ir.actions.act_window">
		<field name="name">Page final score</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">spc_survey.page_final_score</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="spc_survey_page_final_score_wizard_form" />
		<field name="target">new</field>
	</record>
    
</odoo>