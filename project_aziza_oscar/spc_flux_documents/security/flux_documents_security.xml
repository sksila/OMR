<?xml version="1.0"?>
<odoo>
	<!-- Responsable Magasin -->

	<record id="documents_rule_resp_mg" model="ir.rule">
		<field name="name">Documents de Responsable Magasin</field>
		<field name="model_id" ref="model_ir_attachment" />
		<field name="domain_force">['|','|',('site_id.user_ids','child_of', [user.id]),('destinataire_doc_id.user_ids','child_of', [user.id]),('document_type_id','=',False)]</field>
		<field name="groups" eval="[(4,ref('spc_oscar_aziza.group_reponsable_magasin'))]"/>
	</record>

	<!-- Responsable Zone -->

	<record id="documents_rule_resp_zone" model="ir.rule">
		<field name="name">Documents de Responsable Zone</field>
		<field name="model_id" ref="model_ir_attachment" />
		<field name="domain_force">['|','|',('site_id.user_ids','child_of', [user.id]),('destinataire_doc_id.user_ids','child_of', [user.id]),('document_type_id','=',False)]</field>
		<field name="groups" eval="[(4,ref('spc_oscar_aziza.group_reponsable_zone'))]"/>
	</record>

	<!-- DRE -->

	<record id="documents_rule_dre" model="ir.rule">
		<field name="name">Documents de DRE</field>
		<field name="model_id" ref="model_ir_attachment" />
		<field name="domain_force">['|','|',('site_id.user_ids','child_of', [user.id]),('destinataire_doc_id.user_ids','child_of', [user.id]),('document_type_id','=',False)]</field>
		<field name="groups" eval="[(4,ref('spc_oscar_aziza.group_DRE'))]"/>
	</record>

		<!-- Admin -->

	<record id="documents_rule_admin" model="ir.rule">
		<field name="name">Documents d'Admin</field>
		<field name="model_id" ref="model_ir_attachment" />
		<field name="domain_force">[(1,'=',1)]</field>
		<field name="groups"
			eval="[(4,ref('spc_oscar_aziza.group_admin_oscar'))]" />
	</record>

</odoo>
