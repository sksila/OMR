<?xml version="1.0"?>
<odoo>
	<data>
        <record id="ha_view_document_criteres_form" model="ir.ui.view">
            <field name="name">document.criteres.form</field>
            <field name="model">document.criteres</field>
            <field name="arch" type="xml">
                <form string="Criteres">
                <sheet>
                	<div class="oe_title">
                    	<label for="name" class="oe_edit_only"/>
                        <h1>
                           	<field name="name"/>
                        </h1>
                     </div>
                     <group>
                     	<group>
                     		 <field name="code"/>
                     	</group>
                     </group>
                     </sheet>
                </form>
            </field>
        </record>

        <record id="ha_view_document_criteres_tree" model="ir.ui.view">
            <field name="name">document.criteres.form</field>
            <field name="model">document.criteres</field>
            <field name="arch" type="xml">
                <tree string="Criteres">
                	<field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="action_ha_view_document_criteres_form" model="ir.actions.act_window">
            <field name="name">Critères</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">document.criteres</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new kind of Document.
              </p><p>
                Oscar helps you easily to manage your Documents
              </p>
            </field>
        </record>

        <menuitem id="spc_menu_document_criteres_aziza"
            name="Critères"
            action="action_ha_view_document_criteres_form"
            parent="spc_menu_flux_document_config_menu"
            sequence="40"/>
    </data>
</odoo>