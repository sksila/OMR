<?xml version="1.0"?>
<odoo>

		<!-- view filter -->
     <record id="view_document_envelope_form" model="ir.ui.view">
            <field name="name">oscar.document.envelope.form</field>
            <field name="model">oscar.envelope</field>
            <field name="inherit_id" ref="spc_transfer_aziza.envelope_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet//group[@name='pieces_jointes']/notebook" position="inside">
                        <field name="domain_content_document" invisible="1"/>
                        <page name="documents" string="Documents" attrs="{'invisible': [('domain_content_document', '!=', True)]}">
                            <field name="document_ids" options="{'no_create': True}" >
                                <tree string="Documents">
                                    <field name="name"/>
                                    <field name="document_type_id"/>
                                    <field name="fournisseur"/>
                                    <field name="date_insertion"/>
                                    <field name="datas"/>
                                    <field name="state"/>
                                </tree>

                            </field>
                        </page>
                </xpath>
            </field>
     </record>

            
</odoo>
