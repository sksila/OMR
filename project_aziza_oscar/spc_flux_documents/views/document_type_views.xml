<?xml version="1.0"?>
<odoo>

        <record id="ha_view_document_type_form" model="ir.ui.view">
            <field name="name">document.type.form</field>
            <field name="model">document.type</field>
            <field name="arch" type="xml">
                <form string="Document">
                <sheet>
                	<div class="oe_title">
                    	<label for="name" class="oe_edit_only"/>
                        <h1>
                           	<field name="name"/>
                        </h1>
                     </div>
                     <group>
                     	<group>
                     		 <field name="code"/>
                     		 <field name="is_document" />
                     		 <field name="is_fournisseur" />
                     	</group>
                     	<group>
                     		<field name="type_flux" required="1" />
                     		<field name="wf_ged_id" attrs="{'required': [('type_flux','!=', 'physique')],'invisible': [('type_flux','=', 'physique')]}" />
                     		<field name="type" attrs="{'required': [('type_flux','!=', 'physique')],'invisible': [('type_flux','=', 'physique')]}"/>
                     		<field name="ws_config_id" attrs="{'required': [('type_flux','!=', 'physique')],'invisible': [('type_flux','=', 'physique')]}" groups="base.group_erp_manager" />
                     	</group>
                     </group>
                     </sheet>
                </form>
            </field>
        </record>
        <record id="ha_view_document_type_tree" model="ir.ui.view">
            <field name="name">document.type.form</field>
            <field name="model">document.type</field>
            <field name="arch" type="xml">
                <tree string="Document">
                	<field name="name"/>
                    <field name="code"/>
                    <field name="is_document" />
                    <field name="is_fournisseur" />
                    <field name="wf_ged_id"/>
                </tree>
            </field>
        </record>

        <record id="action_view_document_type_form" model="ir.actions.act_window">
            <field name="name">Document</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">document.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new kind of Document.
              </p><p>
                Oscar helps you easily to manage your Documents
              </p>
            </field>
        </record>

        <menuitem id="spc_menu_document_type_aziza"
            name="Type de document"
            action="action_view_document_type_form"
            parent="spc_menu_flux_document_config_menu"
            sequence="20"/>

</odoo>