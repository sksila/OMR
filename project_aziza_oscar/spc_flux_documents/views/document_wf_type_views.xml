<?xml version="1.0"?>
<odoo>
            <record id="ha_view_doc_wf_type_form" model="ir.ui.view">
            <field name="name">document.wf.type.form</field>
            <field name="model">document.wf.type</field>
            <field name="arch" type="xml">
                <form string="Type de WF">
                <sheet>
                	<div class="oe_title">
                    	<label for="name" class="oe_edit_only"/>
                        <h1>
                           	<field name="name"/>
                        </h1>
                     </div>
                </sheet>
                </form>
            </field>
        </record>

        <record id="ha_view_doc_wf_type_tree" model="ir.ui.view">
            <field name="name">document.wf.type.tree</field>
            <field name="model">document.wf.type</field>
            <field name="arch" type="xml">
                <tree string="Type de WF">
                	<field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_view_doc_wf_type_form" model="ir.actions.act_window">
            <field name="name">Type de Workflow</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">document.wf.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="spc_menu_doc_wf_type"
            name="Type de Workflow"
            action="action_view_doc_wf_type_form"
            parent="spc_menu_flux_document_config_menu"
            sequence="30"/>

</odoo>