<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="spc_survey_extra_criteria_type_form_view" model="ir.ui.view">
            <field name="name">spc_survey_extra.criteria_type.form</field>
            <field name="model">spc_survey_extra.criteria_type</field>
            <field name="arch" type="xml">
                <form string="Criteria type">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="spc_survey_extra_criteria_type_tree_view" model="ir.ui.view">
            <field name="name">spc_survey_extra.criteria_type.tree</field>
            <field name="model">spc_survey_extra.criteria_type</field>
            <field name="arch" type="xml">
                <tree string="Criteria type">
                    <field name="name"/>
                </tree>
            </field>
        </record>



        <record id="spc_survey_extra_criteria_type_action" model="ir.actions.act_window">
            <field name="name">Criteria type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">spc_survey_extra.criteria_type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Add criteria type.
                </p>
            </field>
        </record>

        <menuitem name="Criteria type" id="spc_survey_extra_criteria_type_menu" parent="survey.menu_surveys_configuration" action="spc_survey_extra_criteria_type_action" sequence="85"/>

    </data>
</odoo>